@using CommerceProject.Business.Entities;

@{
    var kullanici = ViewBag.Kullanici as Kullanici;
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            @if (kullanici.KullaniciDetay.KullaniciResim == null)
            {
                <img class="img-responsive pic-bordered" src="/Content/Img/no-image.png" alt="" />
            }
            else
            {
                var imageBase64Data = Convert.ToBase64String(kullanici.KullaniciDetay.KullaniciResim);
                string imageDataURL = string.Format("data:image/png;base64,{0}", imageBase64Data);

                <img class="img-responsive pic-bordered" src="@imageDataURL" style="border: 3px solid #4f83bf;" alt="" />
            }
        </div>
        <div class="col-md-9">
            <div class="form-group">
                <div class="table-responsive">
                    <table id="tableKullanici" class="table table-striped table-bordered no-margin">
                        <tbody>
                            <tr>
                                <td style="width:30%;"><span class="bold">Adı Soyadı:</span></td>
                                <td style="width:70%;">@kullanici.KullaniciDetay.Ad @kullanici.KullaniciDetay.Soyad</td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Eposta:</span></td>
                                <td style="width:70%;">@kullanici.Eposta</td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Şirket:</span></td>
                                <td style="width:70%;">@(kullanici.KullaniciDetay.Sirket != null ? kullanici.KullaniciDetay.Sirket.Adi : "-")</td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Üyelik Tarihi:</span></td>
                                <td style="width:70%;">@kullanici.UyelikTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Son Giriş Tarihi:</span></td>
                                <td style="width:70%;">@kullanici.SonGirisTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Başarısız Giriş Sayısı:</span></td>
                                <td style="width:70%;"><span class="badge bg-blue">@kullanici.BasarisizGirisSayisi</span></td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Hesap Kilitli mi?:</span></td>
                                <td style="width:70%;"><input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" @(kullanici.HesapKilitliMi ? "checked" : "") readonly></td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Eposta Onaylı mı?:</span></td>
                                <td style="width:70%;"><input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" @(kullanici.EpostaOnayliMi ? "checked" : "") readonly></td>
                            </tr>
                            <tr>
                                <td style="width:30%;"><span class="bold">Aktif mi?:</span></td>
                                <td style="width:70%;"><input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" @(kullanici.AktifMi ? "checked" : "") readonly></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableKullanici .make-switch').bootstrapSwitch();
    });
</script>