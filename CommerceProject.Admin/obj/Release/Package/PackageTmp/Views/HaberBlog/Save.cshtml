            }
        });

        // Form validation
        $('#comform').validate({
            errorElement: 'span',
            errorClass: 'help-block help-block-error',
            focusInvalid: false,
            ignore: "",
            invalidHandler: validationInvalidHandler,
            rules: {
                txtHBBaslik: {
                    maxlength: 50,
                    required: true
                },
                dropDownHBTip: {
                    required: true
                },
                dateTimeHBYayinlanmaTarihi: {
                    required: true
                }
