@using CommerceProject.Business.Entities

@{
    ViewBag.Title = "HesapNumaralari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var bankaHesapNumaralari = ViewBag.BankaHesapNumaralari as List<HesapNumarasi>;
}


<section id="main">
    <div class="container" data-appear-animation="fadeIn">
        @foreach (var bankaHesapNumarasi in bankaHesapNumaralari)
        {
            <div class="col-sm-12 col-md-12 service">
                <div class="table-box text-small">
                    <table class="table table-hover table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <td colspan="4">
                                    <div class="icon bg">
                                        <img src="@bankaHesapNumarasi.Banka.Logo" />
                                    </div>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><b>IBAN </b></td>
                                <td>@bankaHesapNumarasi.Iban</td>
                                <td><b>HESAP NO </b></td>
                                <td>@bankaHesapNumarasi.HesapNo</td>
                            </tr>
                            <tr>
                                <td><b>ŞEHİR </b></td>
                                <td>@bankaHesapNumarasi.Sehir</td>
                                <td><b>HESAP SAHİBİ </b></td>
                                <td>@bankaHesapNumarasi.HesapSahibi</td>
                            </tr>
                            <tr>
                                <td><b>ŞUBE KODU </b></td>
                                <td>@bankaHesapNumarasi.SubeKodu</td>
                                <td><b>ŞUBE ADI </b></td>
                                <td>@bankaHesapNumarasi.SubeAdi</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</section>