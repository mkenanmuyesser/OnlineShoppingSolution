@using CommerceProject.Business.Entities;

@{
    var siparis = ViewBag.Siparis as Siparis;
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableSiparisHareket .make-switch').bootstrapSwitch();
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="tableSiparisHareket" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:50%">Açıklama</th>
                        <th style="width:20%">Kullanıcıya Gösterilecek mi?</th>
                        <th style="width:15%;">Kayıt Tarihi</th>
                        <th style="width:15%">Aktif mi?</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var spHareket in siparis.SiparisHareket)
                        {
                            <tr>
                                <td>@spHareket.Aciklama</td>
                                <td><input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" @(spHareket.KullaniciyaGosterilecekMi ? "checked" : "") readonly></td>
                                <td>@spHareket.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" @(spHareket.AktifMi ? "checked" : "") readonly>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>