@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

<div class="portlet light bordered blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-puzzle font-white"></i>
            <span class="caption-subject bold font-white uppercase"> @ViewBag.PageProperties.PageHeader </span>
            <span class="caption-helper">@ViewBag.PageProperties.PageDescription</span>
        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn green btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                İşlemler
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="/Gonderim/Save">
                        <i class="fa fa-save"></i> Yeni Kayıt
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="" class="fullscreen" data-original-title="Tam Ekran" title="Tam Ekran">
                        <i class="fa fa-arrows-alt"></i> Tam Ekran
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="portlet-body">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter font-dark"></i>
                    <span class="caption-subject font-dark bold">Filtreleme Kriterleri</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse" data-original-title="Genişlet / Daralt" title="Genişlet / Daralt"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="#" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="txtGonderimAdi" class="control-label">Adı</label>
                                <input id="txtGonderimAdi" class="form-control input-sm maxlength-handler" maxlength="50" placeholder="Gönderim Adı Giriniz..." tabindex="1">
                            </div>
                            <div class="col-md-6">
                                <label for="txtGonderimAciklama" class="control-label">Açıklama</label>
                                <input id="txtGonderimAciklama" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Açıklama Giriniz..." tabindex="2">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">Alt Limit Aralığı</label>
                                <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                    <div class="col-md-6" style="padding-left:0px !important;">
                                        <input id="txtGonderimAltLimitBaslangic" class="form-control input-sm decimal-4 focus-sense" placeholder="Alt Limit Başlangıç..." tabindex="3" />
                                    </div>
                                    <div class="col-md-6" style="padding-right:0px !important;">
                                        <input id="txtGonderimAltLimitBitis" class="form-control input-sm decimal-4 focus-sense" placeholder="Alt Limit Bitiş..." tabindex="4" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Fiyat Aralığı</label>
                                <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                    <div class="col-md-6" style="padding-left:0px !important;">
                                        <input id="txtGonderimFiyatBaslangic" class="form-control input-sm decimal-4 focus-sense" placeholder="Fiyat Başlangıç..." tabindex="5" />
                                    </div>
                                    <div class="col-md-6" style="padding-right:0px !important;">
                                        <input id="txtGonderimFiyatBitis" class="form-control input-sm decimal-4 focus-sense" placeholder="Fiyat Bitiş..." tabindex="6" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">Aktif mi?</label>
                                <div class="input-group">
                                    <div class="icheck-inline">
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" class="icheck" value="2"> Tümü
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" checked class="icheck" value="1"> Aktif
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" class="icheck" value="0"> Pasif
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="col-md-offset-5 col-md-7">
                                <button type="button" class="btn blue-madison" onclick="javascript: ara()" tabindex="7">
                                    Ara
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn green-meadow" onclick="javascript: temizle()" tabindex="8">
                                    Temizle
                                    <i class="fa fa-recycle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-list-ul font-dark"></i>
                    <span class="caption-subject bold">Sonuç Listesi</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="box">
                    <div class="box-header">
                        <div id="boxTools" class="box-tools" style="display:none;">
                            <div class="input-group pull-left">
                                <input type="hidden" id="dropDownPagingSize" class="form-control select2" style="width: 100px;" value="5" />
                            </div>
                            <div class="input-group pull-right">
                                <button type="button" class="btn btn-xs green-stripe pull-right" style="margin-right:10px;" onclick="javascript: excelRaporuAl();"><i class="fa fa-file-excel-o"></i>Excel</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="tableGonderim" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="10%">Resim</th>
                                        <th width="20%">Adı</th>
                                        <th width="20%">Açıklama</th>
                                        <th width="20%">Sorgulama Link</th>
                                        <th width="5%">Alt Limit</th>
                                        <th width="5%">Fiyat</th>
                                        <th width="5%">Sıra</th>
                                        <th width="5%">Aktif mi?</th>
                                        <th width="10%">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div id="footerInfo" class="row" style="display:none;">
                            <div class="col-md-12">
                                <div class="input-group pull-left">
                                    <p id="tableInfo" style="color: #6f6f6f;font-size: 12px;"></p>
                                </div>
                                <div class="input-group pull-right">
                                    <ul id="ulPaging" class="no-margin pull-right"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js{
    <script id="row" type="text/x-jquery-tmpl">
        <tr>
            <td style="text-align:center;">
                {{if Resim != null}}
                <a class="img-gonderim" href="javascript:;" data-toggle="popover" data-img="${Resim}">
                    <img style="width:64px;height:64px;" src="${Resim}" />
                </a>
                {{else}}
                <a class="img-gonderim" href="javascript:;" data-toggle="popover" data-img="/Content/Img/no-image.png">
                    <img style="width:64px;height:64px;" src="/Content/Img/no-image.png" />
                </a>
                {{/if}}
            </td>
            <td>${Adi}</td>
            <td>${Aciklama}</td>
            <td>${GonderimSorgulamaLink}</td>
            <td>${AltLimit}</td>
            <td>${Fiyat}</td>
            <td>${Sira}</td>
            <td>
                <div class="icheck-inline">
                    {{if AktifMi}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" checked readonly>
                    {{else}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" readonly>
                    {{/if}}
                </div>
            </td>
            <td>
                <div class="text-center">
                    <a href="javascript: sil('${GonderimId}');" class="btn btn-xs red" data-toggle="tooltip" data-placement="top" title="Sil">
                        <i class="fa fa-remove"></i>
                    </a>
                    <a href="/Gonderim/Save/${GonderimId}" class="btn btn-xs yellow-casablanca" data-toggle="tooltip" data-placement="top" title="Güncelle">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>
            </td>
        </tr>
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".decimal-4").inputmask('decimal', {
                rightAlign: false,
                integerDigits: 18,
                radixPoint: ".",
                digits: 4
            });

            $('#dropDownPagingSize').select2({
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: [
                    { id: 5, text: 5 },
                    { id: 10, text: 10 },
                    { id: 20, text: 20 },
                    { id: 50, text: 50 }
                ]
            }).on('select2:select', function (e) {
                ara(1, $('#dropDownPagingSize').val());
            });
        });

        function paging(totalCount, pageCount, pageIndex) {
            $('#ulPaging').pagination('destroy');
            $('#ulPaging').pagination({
                items: totalCount,
                itemsOnPage: pageCount,
                currentPage: pageIndex,
                cssStyle: 'light-theme',
                prevText: 'Önceki Sayfa',
                nextText: 'Sonraki Sayfa',
                onPageClick: function (pageNum) {
                    ara(pageNum, pageCount);
                }
            });
        }

        function ara(pageIndex, pageCount) {
            pageIndex = pageIndex == null ? 1 : pageIndex;
            pageCount = pageCount == null ? parseInt($('#dropDownPagingSize').val()) : pageCount;

            $.ajax({
                url: '/Gonderim/Ara',
                data: {
                    'adi': $('#txtGonderimAdi').val(),
                    'aciklama': $('#txtGonderimAciklama').val(),
                    'altLimitBaslangic': $('#txtGonderimAltLimitBaslangic').val() != '' ? parseFloat($('#txtGonderimAltLimitBaslangic').val()) : 0,
                    'altLimitBitis': $('#txtGonderimAltLimitBitis').val() != '' ? parseFloat($('#txtGonderimAltLimitBitis').val()) : 0,
                    'fiyatBaslangic': $('#txtGonderimFiyatBaslangic').val() != '' ? parseFloat($('#txtGonderimFiyatBaslangic').val()) : 0,
                    'fiyatBitis': $('#txtGonderimFiyatBitis').val() != '' ? parseFloat($('#txtGonderimFiyatBitis').val()) : 0,
                    'aktiflik': parseInt($('input[name=rdAktif]:checked').val()),
                    'sayfaSayisi': pageCount,
                    'sayfaSirasi': pageIndex
                },
                type: "get",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();

                    $('#tableGonderim tbody').children().remove();
                    $('#row').tmpl(result.sonucListesi).appendTo('#tableGonderim tbody');

                    $('#tableGonderim .make-switch').bootstrapSwitch();
                    $('[data-toggle="tooltip"]').tooltip();

                    $('[data-toggle="popover"]').popover({
                        container: 'body',
                        html: true,
                        placement: 'right',
                        trigger: 'hover',
                        content: function () {
                            var url = $(this).data('img');
                            return '<img src="' + url + ' " style="width:250px;height:250px;">'
                        }
                    });

                    // table info
                    var txt = '';
                    if (result.toplamKayitSayisi > 0) {
                        var firstPart = ((result.sayfaSirasi - 1) * (result.sayfaSayisi) + 1);
                        var secondPart = (result.sayfaSirasi * result.sayfaSayisi) > result.toplamKayitSayisi ? result.toplamKayitSayisi : (result.sayfaSirasi * result.sayfaSayisi);
                        txt = 'Toplam ' + result.toplamKayitSayisi + ' kayıttan ' + firstPart + '-' + secondPart + ' gösteriliyor.';

                        $('#boxTools').show();
                        $('#footerInfo').show();
                    }
                    else {
                        txt = 'Hiç kayıt bulunamadı.';

                        $('#boxTools').hide();
                        $('#footerInfo').hide();
                    }
                    $('#tableInfo').text(txt);

                    paging(result.toplamKayitSayisi, result.sayfaSayisi, result.sayfaSirasi);
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function temizle() {
            $('#txtGonderimAdi').val('');
            $('#txtGonderimAciklama').val('');
            $('#txtGonderimAltLimitBaslangic').val('');
            $('#txtGonderimAltLimitBitis').val('');
            $('#txtGonderimFiyatBaslangic').val('');
            $('#txtGonderimFiyatBitis').val('');
        }

        function sil(id) {
            confirm('ONAY', '<p>Silmek istediğinize emin misiniz?</p>', function () {
                $.ajax({
                    url: '/Gonderim/Sil/' + id,
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function () {
                        showLoadingModal();
                    },
                    success: function (result) {
                        hideLoadingModal();
                        if (result) {
                            callAlert('success', 'Silme işlemi başarılı.');
                            ara();
                        }
                        else {
                            callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                        }
                    },
                    error: function () {
                        hideLoadingModal();
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                });
            });
        }

        function excelRaporuAl() {
            var adi = $('#txtGonderimAdi').val();
            var aciklama = $('#txtGonderimAciklama').val();
            var altLimitBaslangic = $('#txtGonderimAltLimitBaslangic').val() != '' ? parseFloat($('#txtGonderimAltLimitBaslangic').val()) : 0;
            var altLimitBitis = $('#txtGonderimAltLimitBitis').val() != '' ? parseFloat($('#txtGonderimAltLimitBitis').val()) : 0;
            var fiyatBaslangic = $('#txtGonderimFiyatBaslangic').val() != '' ? parseFloat($('#txtGonderimFiyatBaslangic').val()) : 0;
            var fiyatBitis = $('#txtGonderimFiyatBitis').val() != '' ? parseFloat($('#txtGonderimFiyatBitis').val()) : 0;
            var aktiflik = parseInt($('input[name=rdAktif]:checked').val());

            window.location.href = '/Gonderim/ExcelRaporuAl?adi=' + adi
                + '&aciklama=' + aciklama
                + '&altLimitBaslangic=' + altLimitBaslangic
                + '&altLimitBitis=' + altLimitBitis
                + '&fiyatBaslangic=' + fiyatBaslangic
                + '&fiyatBitis=' + fiyatBitis
                + '&aktiflik=' + aktiflik;
        }
    </script>
}