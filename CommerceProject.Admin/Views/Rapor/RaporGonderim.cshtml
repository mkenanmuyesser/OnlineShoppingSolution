
@{
    ViewBag.Title = "RaporGonderim";
    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

<div class="portlet light bordered blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-puzzle font-white"></i>
            <span class="caption-subject bold font-white uppercase"> @ViewBag.PageProperties.PageHeader </span>
            <span class="caption-helper">@ViewBag.PageProperties.PageDescription</span>
        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn green btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                İşlemler
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="/Rapor/Index">
                        <i class="fa fa-save"></i> Raporlar
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="" class="fullscreen" data-original-title="Tam Ekran" title="Tam Ekran">
                        <i class="fa fa-arrows-alt"></i> Tam Ekran
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="portlet-body">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter font-dark"></i>
                    <span class="caption-subject font-dark bold">Filtreleme Kriterleri</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse" data-original-title="Genişlet / Daralt" title="Genişlet / Daralt"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="#" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="control-label">Gönderim Takip No</label>
                                <input id="txtTakipNo" class="form-control input-sm maxlength-handler" maxlength="50" placeholder="Gönderim Takip No Giriniz..." tabindex="1">
                            </div>
                            <div class="col-md-3">
                                <label class="control-label">Sipariş No</label>
                                <input id="txtSiparisNo" class="form-control input-sm integer focus-sense" placeholder="Sipariş No Giriniz..." tabindex="2">
                            </div>
                            <div class="col-md-6">
                                <label for="dropDownUrun" class="control-label">
                                    Ürün<span style="font-size: 12px;color: #ef5e77;"> Ürün Adı / Ürün Kodu / Barkod No' ya göre arama yapabilirsiniz.</span>
                                </label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <select id="dropDownUrun" name="dropDownUrun" class="form-control select2" style="width:100%;" tabindex="3"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">Gönderim Tipi</label>
                                <select id="dropDownGonderimTip" class="form-control select2" style="width:100%;" tabindex="4"></select>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Teslim Zamanı Tipi</label>
                                <select id="dropDownTeslimZamaniTip" class="form-control select2" style="width:100%;" tabindex="5"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">Sipariş Tarihi Aralığı</label>
                                <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                    <div class="col-md-6" style="padding-left:0px !important;">
                                        <div id="dateTimeSiparisBaslangic" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Başlangıç Tarihi" tabindex="6">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6" style="padding-right:0px !important;">
                                        <div id="dateTimeSiparisBitis" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Bitiş Tarihi" tabindex="7">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Gönderim Tarihi Aralığı</label>
                                <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                    <div class="col-md-6" style="padding-left:0px !important;">
                                        <div id="dateTimeGonderimBaslangic" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Başlangıç Tarihi" tabindex="8">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6" style="padding-right:0px !important;">
                                        <div id="dateTimeGonderimBitis" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Bitiş Tarihi" tabindex="9">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="text-center">
                                <button type="button" class="btn blue-madison" onclick="javascript: ara()" tabindex="10">
                                    Ara
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn green-meadow" onclick="javascript: temizle()" tabindex="11">
                                    Temizle
                                    <i class="fa fa-recycle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-list-ul font-dark"></i>
                    <span class="caption-subject bold">Sonuç Listesi</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="box">
                    <div class="box-header">
                        <div id="boxTools" class="box-tools" style="display:none;">
                            <div class="input-group pull-left">
                                <input type="hidden" id="dropDownPagingSize" class="form-control select2" style="width: 100px;" value="5" />
                            </div>
                            <div class="input-group pull-right">
                                <button type="button" class="btn btn-xs green-stripe pull-right" style="margin-right:10px;" onclick="javascript: excelRaporuAl();"><i class="fa fa-file-excel-o"></i>Excel</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="tableRaporGonderim" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="5%">Sipariş No</th>
                                        <th width="10%">Gönderim Takip No</th>
                                        <th width="10%">Gönderim Tipi</th>
                                        <th width="10%">Teslim Zamanı Tipi</th>
                                        <th width="10%">Ürün Kodu</th>
                                        <th width="10%">Barkod No</th>
                                        <th width="10%">Ürün Adı</th>
                                        <th width="5%">Adet</th>
                                        <th width="10%">Sipariş Tarihi</th>
                                        <th width="10%">Gönderim Tarihi</th>
                                        <th width="10%">Teslim Tarihi</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div id="footerInfo" class="row" style="display:none;">
                            <div class="col-md-12">
                                <div class="input-group pull-left">
                                    <p id="tableInfo" style="color: #6f6f6f;font-size: 12px;"></p>
                                </div>
                                <div class="input-group pull-right">
                                    <ul id="ulPaging" class="no-margin pull-right"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js{
    <script id="row" type="text/x-jquery-tmpl">
        <tr>
            <td>#${SiparisNo}</td>
            <td>${TakipNo}</td>
            <td>${GonderimTipi}</td>
            <td>${TeslimZamaniTipi}</td>
            <td>${UrunKodu}</td>
            <td>${Barkod}</td>
            <td><a class="bold" href="/Urun/Card/${UrunId}" target="_blank">${UrunAdi}</a></td>
            <td>${Adet}</td>
            <td>${SiparisTarihi}</td>
            <td>${GonderimTarihi}</td>
            <td>${TeslimTarihi}</td>
        </tr>
    </script>

    <script type="text/javascript">
        var gonderimTipListesi = @Html.Raw(Json.Encode(ViewBag.GonderimTipListesi))
        var teslimZamaniTipListesi = @Html.Raw(Json.Encode(ViewBag.TeslimZamaniTipListesi))

        $(document).ready(function () {
            $('.input-group.date').datepicker({
                autoclose: true,
                dateFormat: "dd.mm.yyyy",
                language: 'tr'
            });

            $(".integer").inputmask('99999999', {
                numericInput: true,
                rightAlignNumerics: false,
                greedy: false,
                placeholder: '00000000'
            });

            $('#dropDownUrun').select2({
                placeholder: "Ürün Ara...",
                allowClear: true,
                minimumInputLength: 3,
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    },
                    searching: function () {
                        return 'Aranıyor...';
                    },
                    inputTooShort: function (args) {
                        var remainingChars = args.minimum - args.input.length;
                        var message = 'En az ' + remainingChars + ' karakter daha girmelisiniz.';
                        return message;
                    },
                    errorLoading: function () {
                        return 'Sonuç yüklenemedi.';
                    },
                },
                ajax: {
                    url: '/Urun/UrunAra',
                    dataType: 'json',
                    type: 'get',
                    delay: 500,
                    params: {
                        contentType: 'application/json; charset=utf-8'
                    },
                    data: function (params) {
                        return {
                            term: params.term
                        };
                    },
                    processResults: function (data, params) {
                        var data = $.map(data, function (obj) {
                            obj.id = obj.id;
                            obj.text = obj.text;
                            return obj;
                        });

                        return {
                            results: data
                        };
                    },
                    escapeMarkup: function (m) { return m; }
                }
            });
            $('#dropDownGonderimTip').select2({
                placeholder: "Gönderim Tipi Seçiniz...",
                allowClear: true,
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: gonderimTipListesi,
                escapeMarkup: function (markup) {
                    return markup;
                }
            }).val('').trigger('change');
            $('#dropDownTeslimZamaniTip').select2({
                placeholder: "Teslim Zamanı Tipi Seçiniz...",
                allowClear: true,
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: teslimZamaniTipListesi,
                escapeMarkup: function (markup) {
                    return markup;
                }
            }).val('').trigger('change');

            $('#dropDownPagingSize').select2({
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: [
                    { id: 5, text: 5 },
                    { id: 10, text: 10 },
                    { id: 20, text: 20 },
                    { id: 50, text: 50 }
                ]
            }).on('select2:select', function (e) {
                ara(1, $('#dropDownPagingSize').val());
            });
        });

        function paging(totalCount, pageCount, pageIndex) {
            $('#ulPaging').pagination('destroy');
            $('#ulPaging').pagination({
                items: totalCount,
                itemsOnPage: pageCount,
                currentPage: pageIndex,
                cssStyle: 'light-theme',
                prevText: 'Önceki Sayfa',
                nextText: 'Sonraki Sayfa',
                onPageClick: function (pageNum) {
                    ara(pageNum, pageCount);
                }
            });
        }

        function ara(pageIndex, pageCount) {
            if ($('#dateTimeSiparisBaslangic').datepicker('getDate') != '' && $('#dateTimeSiparisBitis').datepicker('getDate')) {
                if ($('#dateTimeSiparisBaslangic').datepicker('getDate') > $('#dateTimeSiparisBitis').datepicker('getDate')) {
                    callAlert('warning', 'Sipariş tarihi için başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            if ($('#dateTimeGonderimBaslangic').datepicker('getDate') != '' && $('#dateTimeGonderimBitis').datepicker('getDate')) {
                if ($('#dateTimeGonderimBaslangic').datepicker('getDate') > $('#dateTimeGonderimBitis').datepicker('getDate')) {
                    callAlert('warning', 'Gönderim tarihi için başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            pageIndex = pageIndex == null ? 1 : pageIndex;
            pageCount = pageCount == null ? 5 : pageCount;

            $.ajax({
                url: '/Rapor/RaporGonderimAra',
                data: {
                    'takipNo': $('#txtTakipNo').val(),
                    'siparisNo': $('#txtSiparisNo').val() != '' ? $('#txtSiparisNo').val() : 0,
                    'urunId': ($('#dropDownUrun').val() != '' && $('#dropDownUrun').val() != null) ? $('#dropDownUrun').val() : 0,
                    'gonderimTipId': ($('#dropDownGonderimTip').val() != '' && $('#dropDownGonderimTip').val() != null) ? $('#dropDownGonderimTip').val() : 0,
                    'teslimZamaniTipId': ($('#dropDownTeslimZamaniTip').val() != '' && $('#dropDownTeslimZamaniTip').val() != null) ? $('#dropDownTeslimZamaniTip').val() : 0,
                    'siparisBaslangicTarihi': $('#dateTimeSiparisBaslangic').find('input').val() != '' ? $('#dateTimeSiparisBaslangic').datepicker('getDate').toUTCString() : null,
                    'siparisBitisTarihi': $('#dateTimeSiparisBitis').find('input').val() != '' ? $('#dateTimeSiparisBitis').datepicker('getDate').toUTCString() : null,
                    'gonderimBaslangicTarihi': $('#dateTimeGonderimBaslangic').find('input').val() != '' ? $('#dateTimeGonderimBaslangic').datepicker('getDate').toUTCString() : null,
                    'gonderimBitisTarihi': $('#dateTimeGonderimBitis').find('input').val() != '' ? $('#dateTimeGonderimBitis').datepicker('getDate').toUTCString() : null,
                    'sayfaSayisi': pageCount,
                    'sayfaSirasi': pageIndex
                },
                type: "get",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();

                    $('#tableRaporGonderim tbody').children().remove();
                    $('#row').tmpl(result.sonucListesi).appendTo('#tableRaporGonderim tbody');

                    $('[data-toggle="tooltip"]').tooltip();

                    // table info
                    var txt = '';
                    if (result.toplamKayitSayisi > 0) {
                        var firstPart = ((result.sayfaSirasi - 1) * (result.sayfaSayisi) + 1);
                        var secondPart = (result.sayfaSirasi * result.sayfaSayisi) > result.toplamKayitSayisi ? result.toplamKayitSayisi : (result.sayfaSirasi * result.sayfaSayisi);
                        txt = 'Toplam ' + result.toplamKayitSayisi + ' kayıttan ' + firstPart + '-' + secondPart + ' gösteriliyor.';

                        $('#boxTools').show();
                        $('#footerInfo').show();
                    }
                    else {
                        txt = 'Hiç kayıt bulunamadı.';

                        $('#boxTools').hide();
                        $('#footerInfo').hide();
                    }
                    $('#tableInfo').text(txt);

                    paging(result.toplamKayitSayisi, result.sayfaSayisi, result.sayfaSirasi);
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function temizle() {
            $('#txtTakipNo').val('');
            $('#txtSiparisNo').val('');
            $('#dropDownUrun').val('').trigger('change');
            $('#dropDownGonderimTip').val('').trigger('change');
            $('#dropDownTeslimZamaniTip').val('').trigger('change');
            $('#dateTimeSiparisBaslangic').data('datepicker').setDate(null);
            $('#dateTimeSiparisBitis').data('datepicker').setDate(null);
            $('#dateTimeGonderimBaslangic').data('datepicker').setDate(null);
            $('#dateTimeGonderimBitis').data('datepicker').setDate(null);

            $('#tableRaporGonderim tbody').children().remove();
            $('#boxTools').hide();
            $('#footerInfo').hide();
        }

        function excelRaporuAl() {
            if ($('#dateTimeSiparisBaslangic').datepicker('getDate') != '' && $('#dateTimeSiparisBitis').datepicker('getDate')) {
                if ($('#dateTimeSiparisBaslangic').datepicker('getDate') > $('#dateTimeSiparisBitis').datepicker('getDate')) {
                    callAlert('warning', 'Sipariş tarihi için başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            if ($('#dateTimeGonderimBaslangic').datepicker('getDate') != '' && $('#dateTimeGonderimBitis').datepicker('getDate')) {
                if ($('#dateTimeGonderimBaslangic').datepicker('getDate') > $('#dateTimeGonderimBitis').datepicker('getDate')) {
                    callAlert('warning', 'Gönderim tarihi için başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            var takipNo = $('#txtTakipNo').val();
            var siparisNo = $('#txtSiparisNo').val() != '' ? $('#txtSiparisNo').val() : 0;
            var urunId = ($('#dropDownUrun').val() != '' && $('#dropDownUrun').val() != null) ? $('#dropDownUrun').val() : 0;
            var gonderimTipId = ($('#dropDownGonderimTip').val() != '' && $('#dropDownGonderimTip').val() != null) ? $('#dropDownGonderimTip').val() : 0;
            var teslimZamaniTipId = ($('#dropDownTeslimZamaniTip').val() != '' && $('#dropDownTeslimZamaniTip').val() != null) ? $('#dropDownTeslimZamaniTip').val() : 0;
            var siparisBaslangicTarihi = $('#dateTimeSiparisBaslangic').find('input').val() != '' ? $('#dateTimeSiparisBaslangic').datepicker('getDate').toUTCString() : null;
            var siparisBitisTarihi = $('#dateTimeSiparisBitis').find('input').val() != '' ? $('#dateTimeSiparisBitis').datepicker('getDate').toUTCString() : null;
            var gonderimBaslangicTarihi = $('#dateTimeGonderimBaslangic').find('input').val() != '' ? $('#dateTimeGonderimBaslangic').datepicker('getDate').toUTCString() : null;
            var gonderimBitisTarihi = $('#dateTimeGonderimBitis').find('input').val() != '' ? $('#dateTimeGonderimBitis').datepicker('getDate').toUTCString() : null;

            window.location.href = '/Rapor/ExcelRaporGonderim?takipNo=' + takipNo
                + '&siparisNo=' + siparisNo
                + '&urunId=' + urunId
                + '&gonderimTipId=' + gonderimTipId
                + '&teslimZamaniTipId=' + teslimZamaniTipId
                + '&siparisBaslangicTarihi=' + siparisBaslangicTarihi
                + '&siparisBitisTarihi=' + siparisBitisTarihi
                + '&gonderimBaslangicTarihi=' + gonderimBaslangicTarihi
                + '&gonderimBitisTarihi=' + gonderimBitisTarihi;
        }
    </script>
}