            if (CKEDITOR.instances.txtUzunAciklama.getData().length > 500) {
                callAlert('warning', 'Uzun açıklama alanı en fazla 500 karakter olmalıdır.');
                return false;
            }

            // Paket Kategoriler
            var paketKategoriler = [];
            $('#tableKategori tbody tr').each(function () {
                var trRow = $(this);

                paketKategoriler.push({
                    PaketKategoriId: trRow.attr('data-id'),
