@using CommerceProject.Business.Entities

@{ 
    var beklemedeSiparisler = ViewBag.BeklemedeSiparisler as List<Siparis>;
    var onayBekleyenSiparisler = ViewBag.OnayBekleyenSiparisler as List<Siparis>;
    var gonderildiSiparisler = ViewBag.GonderildiSiparisler as List<Siparis>;
}

<div class="page-quick-sidebar">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="javascript:;" data-target="#quick_sidebar_tab_1" data-toggle="tab" style="height:120px;">
                Bekleyen Siparişler
                <span class="badge badge-danger">@(beklemedeSiparisler.Count + onayBekleyenSiparisler.Count)</span>
            </a>
        </li>
        <li>
            <a href="javascript:;" data-target="#quick_sidebar_tab_2" data-toggle="tab" style="height:120px;">
                Bugün Gönderilen Siparişler
                <span class="badge badge-danger">@(gonderildiSiparisler.Count)</span>
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active page-quick-sidebar-chat" id="quick_sidebar_tab_1">
            <div class="page-quick-sidebar-chat-users" data-rail-color="#ddd" data-wrapper-class="page-quick-sidebar-list">
                <h3 class="list-heading">Beklemede <span class="badge badge-primary">@beklemedeSiparisler.Count</span></h3>
                <ul class="media-list list-items">
                    @{
                        foreach (var siparis in beklemedeSiparisler)
                        {
                            <li class="media">
                                <div class="media-status"><i class="fa fa-clock-o"></i> @(siparis.SiparisTarihi.ToString("dd.MM.yyyy HH:mm"))</div>
                                <div class="media-body">
                                    <h4 class="media-heading">#@(siparis.SiparisId)</h4>
                                    <div class="media-heading-sub">@(siparis.Kullanici.KullaniciDetay.Ad) @(siparis.Kullanici.KullaniciDetay.Soyad)</div>
                                    <div class="media-heading-small">
                                        <a href="/Siparis/Save/@siparis.SiparisId" target="_blank" class="btn btn-xs blue-stripe font-blue"><i class="fa fa-mail-forward"></i> Siparişe Git</a>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
                <h3 class="list-heading">Onay Bekliyor <span class="badge badge-primary">@onayBekleyenSiparisler.Count</span></h3>
                <ul class="media-list list-items">
                    @{
                        foreach (var siparis in onayBekleyenSiparisler)
                        {
                            <li class="media">
                                <div class="media-status"><i class="fa fa-clock-o"></i> @(siparis.SiparisTarihi.ToString("dd.MM.yyyy HH:mm"))</div>
                                <div class="media-body">
                                    <h4 class="media-heading">#@(siparis.SiparisId)</h4>
                                    <div class="media-heading-sub">@(siparis.Kullanici.KullaniciDetay.Ad) @(siparis.Kullanici.KullaniciDetay.Soyad)</div>
                                    <div class="media-heading-small">
                                        <a href="/Siparis/Save/@siparis.SiparisId" target="_blank" class="btn btn-xs blue-stripe font-blue"><i class="fa fa-mail-forward"></i> Siparişe Git</a>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="tab-pane page-quick-sidebar-chat" id="quick_sidebar_tab_2">
            <div class="page-quick-sidebar-chat-users" data-rail-color="#ddd" data-wrapper-class="page-quick-sidebar-list">
                <ul class="media-list list-items">
                    @{
                        foreach (var siparis in gonderildiSiparisler)
                        {
                            <li class="media">
                                <div class="media-status"><i class="fa fa-clock-o"></i> @(siparis.SiparisTarihi.ToString("dd.MM.yyyy HH:mm"))</div>
                                <div class="media-body">
                                    <h4 class="media-heading">#@(siparis.SiparisId)</h4>
                                    <div class="media-heading-sub">@(siparis.Kullanici.KullaniciDetay.Ad) @(siparis.Kullanici.KullaniciDetay.Soyad)</div>
                                    <div class="media-heading-small">
                                        <a href="/Siparis/Save/@siparis.SiparisId" target="_blank" class="btn btn-xs blue-stripe font-blue"><i class="fa fa-mail-forward"></i> Siparişe Git</a>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>