            autoclose: true,
            dateFormat: "dd.mm.yyyy",
            language: 'tr'
        });

        $('[data-toggle="tooltip"]').tooltip();
        $('[data-toggle="popover"]').popover({
            container: 'body',
            html: true,
            placement: 'right',
            trigger: 'hover',
            content: function () {
                var url = $(this).data('img');
