            var nitelikDegerGirilmisMi = true;
            $('#tableNitelik tbody tr').each(function () {
                var trRow = $(this);

                if (trRow.find('td').eq(1).find('input').val() == '') {
                    nitelikDegerGirilmisMi = false;
                    return false;
                }

                paketNitelikler.push({
                    PaketNitelikId: trRow.attr('data-id'),
                    PaketId: parseInt($('#hdnPaketId').val()),
                    NitelikId: trRow.attr('data-nitelikid'),
                    NitelikDegeri: $('#txtNitelikDeger' + trRow.attr('data-nitelikid')).val(),
                    Sira: $('#txtNitelikSira' + trRow.attr('data-nitelikid')).val(),
                    AktifMi: $('#txtNitelikAktif' + trRow.attr('data-nitelikid')).is(":checked") ? true : false
                });
            });

            if (!nitelikDegerGirilmisMi) {
                callAlert('warning', 'Lütfen paket nitelikleri için nitelik değerlerini giriniz.');
                return false;
            }

            // Paket Ürünler
            var paketUrunler = [];
            var minUrunAdediGirilmisMi = true;
            var minUrunAdediBirMi = true;
            $('#tableUrun tbody tr').each(function () {
                var trRow = $(this);

                if (trRow.find('td').eq(1).find('input').val() == '') {
                    minUrunAdediGirilmisMi = false;
                    return false;
                }
                else {
                    if (parseInt(trRow.find('td').eq(1).find('input').val()) <= 0) {
                        minUrunAdediBirMi = false;
                        return false;
                    }
                }

                paketUrunler.push({
                    PaketUrunId: trRow.attr('data-id'),
                    PaketId: parseInt($('#hdnPaketId').val()),
                    UrunId: trRow.attr('data-urunid'),
                    Adet: $('#txtUrunAdet' + trRow.attr('data-urunid')).val(),
                    AktifMi: $('#txtUrunAktif' + trRow.attr('data-urunid')).is(":checked") ? true : false
                });
            });

            if (!minUrunAdediGirilmisMi) {
                callAlert('warning', 'Lütfen ürün adedi giriniz.');
                return false;
            }
            if (!minUrunAdediBirMi) {
                callAlert('warning', 'Girilen ürün adedi 0\'dan büyük olmalı.');
                return false;
            }

            var data = {
                PaketId: parseInt($('#hdnPaketId').val()),
                PaketKod: $('#txtPaketKodu').val(),
                VergiId: ($('#dropDownVergi').val() != '' && $('#dropDownVergi').val() != null) ? $('#dropDownVergi').val() : 0,
                NitelikGrupId: ($('#dropDownNitelikGrup').val() != '' && $('#dropDownNitelikGrup').val() != null) ? $('#dropDownNitelikGrup').val() : 0,
                Adi: $('#txtPaketAdi').val(),
                KisaAciklama: $('#txtKisaAciklama').val(),
                UzunAciklama: CKEDITOR.instances.txtUzunAciklama.getData(),
                Tags: $('#txtTags').val(),
                MetaKeywords: $('#txtMetaKeywords').val(),
                MetaDescription: $('#txtMetaDescription').val(),
                MetaTitle: $('#txtMetaTitle').val(),
                BaslangicTarihi: $('#dateTimeBaslangicTarihi').find('input').val() != '' ? $('#dateTimeBaslangicTarihi').datepicker('getDate').toUTCString() : null,
                BitisTarihi: $('#dateTimeBitisTarihi').find('input').val() != '' ? $('#dateTimeBitisTarihi').datepicker('getDate').toUTCString() : null,
                Sira: parseInt($('#txtPaketSira').val()),
                SatinAlAktifMi: $('#txtSatinAlAktif').is(":checked") ? true : false,
                OnSiparisAktifMi: $('#txtOnSiparisAktif').is(":checked") ? true : false,
                YeniMi: $('#txtPaketYeni').is(":checked") ? true: false,
                AktifMi: $('#txtPaketAktif').is(":checked") ? true : false,
                PaketKategori: paketKategoriler,
                PaketNitelik: paketNitelikler,
                PaketUrun: paketUrunler
            };

            $.ajax({
                url: '/Paket/KaydetGuncelle',
                data: JSON.stringify(data),
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result > 0) {
                        callAlert('success', 'Kayıt işlemi başarılı.');
                        setTimeout(function myfunction() {
                            window.location.href = '/Paket/Save/' + result;
                        }, 1500);
                    }
                    else {
                        callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function editModeResim(id, obj) {
            $('#tableResim .data-edit').addClass('none');
            $('#tableResim .data-show').removeClass('none');

            var trRow = $(obj).closest('tr').addClass('none');
            $('#tableResim .data-edit[data-id="' + id + '"]').removeClass('none');
        }

        function CancelModeResim(id, obj) {
            $('#tableResim .data-edit').addClass('none');
            $('#tableResim .data-show').removeClass('none');
        }

        function SaveModeResim(id, obj) {
            var aciklama = $('#ack-' + id).val();
            var altAttr = $('#altattr-' + id).val();
            var titleAttr = $('#titleattr-' + id).val();
            var tarih = $('#tarih-' + id).find('input').val() != '' ? $('#tarih-' + id).datepicker('getDate').toUTCString() : null;
            var tarihText = $('#tarih-' + id).find('input').val();
            var sira = $('#sira-' + id).val();
            var yenimi = $('#yeni-' + id).is(":checked") ? true : false;
            var aktifmi = $('#aktif-' + id).is(":checked") ? true : false;

            var data = {
                PaketResimId: id,
                Aciklama: aciklama,
                AltAttribute: altAttr,
                TitleAttribute: titleAttr,
                Tarih: tarih,
                Sira: sira,
                YeniMi: yenimi,
                AktifMi: aktifmi
            };

            $.ajax({
                url: '/Paket/ResimKaydetGuncelle',
                data: JSON.stringify(data),
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result) {
                        callAlert('success', 'Resim güncelleme işlemi başarılı.');

                        var trRow = $('#tableResim .data-show[data-id="' + id + '"]');
                        trRow.find('.hb-aciklama').html(aciklama);
                        trRow.find('.hb-altattr').html(altAttr);
                        trRow.find('.hb-titleattr').html(titleAttr);
                        trRow.find('.hb-tarih').html(tarihText);
                        trRow.find('.hb-sira').html(sira);

                        $('#yenimi-' + id).bootstrapSwitch('destroy').prop('checked', yenimi).bootstrapSwitch();
                        $('#aktifmi-' + id).bootstrapSwitch('destroy').prop('checked', aktifmi).bootstrapSwitch();

                        $('#tableResim .data-edit').addClass('none');
                        $('#tableResim .data-show').removeClass('none');
                    }
                    else {
                        callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function nodeSil(obj) {
            $(obj).closest('tr').remove();
        }

        function paketUrunEkle() {
            if ($('#dropDownPaketUrun').val() != null && $('#dropDownPaketUrun').val() != '') {
                var urunVarMi = false;
                var urunId = $('#dropDownPaketUrun').val();

                $('#tableUrun tbody tr').each(function () {
                    var trRow = $(this);

                    if (trRow.attr('data-urunid') == urunId) {
                        urunVarMi = true;
                        return false;
                    }
                });
                if (urunVarMi) {
                    $('#tableUrun tbody tr[data-urunid="' + urunId + '"]').addClass('bg-red-pink');
                    setTimeout(function () {
                        $('#tableUrun tbody tr[data-urunid="' + urunId + '"]').removeClass('bg-red-pink');
                    }, 500);
                    return false;
                }

                $('#tableUrun tbody').append('<tr data-id="0" data-urunid="' + urunId + '">'
                    + '<td>' + $('#dropDownPaketUrun').select2('data')[0].text + '</td>'
                    + '<td>'
                        + '<input id="txtUrunAdet' + urunId + '" type="text" class="form-control input-sm integer-2" placeholder="Adet" value="1" />'
                    + '</td>'
                    + '<td>'
                        + '<div class="icheck-inline">'
                            + '<input id="txtUrunAktif' + urunId + '" type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" checked />'
                        + '</div>'
                    + '</td>'
                    + '<td>'
                        + '<div class="text-center">'
                            + '<button type="button" class="btn btn-xs red" data-toggle="tooltip" data-placement="top" title="Sil" onclick="javascript:paketUrunSil(this);">'
                                + '<i class="fa fa-remove"></i>'
                            + '</button>'
                        + '</div>'
                    + '</td>'
                    + '</tr>');

                $('[data-toggle="tooltip"]').tooltip();
                $('#txtUrunAktif' + urunId).bootstrapSwitch();
                $('#txtUrunAdet' + urunId).inputmask('integer', { min: 1, max: 99 });

            } else {
                callAlert('warning', 'Lütfen ürün seçiniz.');
                return false;
            }
        }
        function paketUrunSil(obj) {
            $(obj).closest('tr').remove();
        }

