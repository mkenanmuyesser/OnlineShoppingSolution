                                    <option>Perakende Müşteri</option>
                                    <option>Şirket Müşteri</option>
                                </select>
                            </div>                           
                        </div>
                        <div class="form-actions">
                            <div class="col-md-offset-5 col-md-7">
                                <button type="submit" class="btn blue-madison">
                                    Ara
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn green-meadow">
                                    Temizle
                                    <i class="fa fa-recycle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-database font-dark"></i>
                    <span class="caption-subject bold uppercase">&nbsp;</span>
                </div>
            </div>
            <div class="portlet-body">
                <table id="sample_1" class="table table-striped table-bordered table-hover">
