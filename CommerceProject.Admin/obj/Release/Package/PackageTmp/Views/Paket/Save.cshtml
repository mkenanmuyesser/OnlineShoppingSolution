        function templateData(obj) {
            if (obj.id == '')
                return obj.text;

            if (obj.aktif) {
                return obj.text;
            } else {
                return '<span style="color:red;">' + obj.text + ' (Pasif)</span>';
            }
        }
        function templateDataSelection(obj) {
            if (obj.id == '')
                return obj.text;

            if (obj.aktif) {
                return obj.text;
            } else {
                return '<span style="color:red;">' + obj.text + ' (Pasif)</span>';
            }
        }

        function kaydet() {
            if ($('#dateTimeBaslangicTarihi').datepicker('getDate') != '' && $('#dateTimeBitisTarihi').datepicker('getDate')) {
                if ($('#dateTimeBaslangicTarihi').datepicker('getDate') > $('#dateTimeBitisTarihi').datepicker('getDate')) {
