    <script type="text/javascript">
        $(document).ready(function () {
            $('.modal').on('shown.bs.modal', function () {
                $('body').css('overflow-y', 'scroll');
                $('body').css('padding-right', '0px');
                setTimeout(function () {
                    $('.modal').addClass('modal-background');
                }, 200);
            });

            $('.modal').on('hidden.bs.modal', function () {
                $('.modal').removeClass('modal-background');
            });

            if ($('.carousel-box .carousel').length && typeof carousel == 'function') carousel();

            $(window).resize();
        });

        function haberBulteniAboneOl() {
            if ($('#txtHaberBulteniEposta').val() == '') {
                callAlert('warning', 'Lütfen gerekli alanları doldurunuz.');
                return false;
            }

            $.ajax({
                url: '/Home/HaberBulteniAboneOl',
                data: JSON.stringify({
                    'haberBulteniEposta': $('#txtHaberBulteniEposta').val(),
                }),
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result) {
                        callAlert('success', 'Haber Bülteni Aboneliğiniz Yapılmıştır.')
                    }
                    else {
                        callAlert('info', 'Haber Bülteni Aboneliğiniz Daha Önceden Yapılmıştır.')
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function sepeteEkle(id, adet, mesajGosterilsin) {
            $.ajax({
                url: '/Sepet/SepeteEkle',
                data: JSON.stringify({
                    'urunId': id,
                    'adet': adet,
                }),
                type: "post",
                cache: false,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result == null || result == '') {
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                    else {
                        menuSepetYenile();
                        if (mesajGosterilsin) {
                            callAlert('success', 'Sepetinize ürününüz eklendi.');
                        }
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function sepetetenCikar(id, adet, mesajGosterilsin) {
            $.ajax({
                url: '/Sepet/SepettenCikar',
                data: JSON.stringify({
                    'urunId': id,
                    'adet': adet,
                }),
                type: "post",
                cache:false,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result == null || result == '') {
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                    else {
                        menuSepetYenile();
                        if (mesajGosterilsin) {
                            callAlert('success', 'Sepetinizden ' + adet + ' ürün çıkarıldı.');
                        }
