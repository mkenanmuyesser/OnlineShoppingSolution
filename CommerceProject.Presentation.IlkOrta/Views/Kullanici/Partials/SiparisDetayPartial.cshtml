@using CommerceProject.Business.Entities;

@{
    var siparis = ViewBag.Siparis as Siparis;
}

<style type="text/css">
    #tableSiparisDetay tr td {
        padding: 5px !important;
    }

    #tableFaturaAdres tr td {
        padding: 5px !important;
        text-align: left !important;
    }

    #tableGonderimAdres tr td {
        padding: 5px !important;
        text-align: left !important;
    }

    .bold {
        font-weight: 600 !important;
    }

    .normal {
        font-weight: normal !important;
    }
</style>

@if (ViewBag.Mesaj == null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Kullanıcı Eposta</span></label>
                        </div>
                        <label class="normal">@siparis.Kullanici.Eposta</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Kullanıcı Ad Soyad</span></label>
                        </div>
                        <label class="normal">@siparis.Kullanici.KullaniciDetay.Ad @siparis.Kullanici.KullaniciDetay.Soyad</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Kullanıcı Üyelik Tarihi</span></label>
                        </div>
                        <label class="normal">@siparis.Kullanici.UyelikTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Ödeme Tipi</span></label>
                        </div>
                        <label class="normal">@siparis.SiparisOdemeTip.Adi</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Ödeme Durmu</span></label>
                        </div>
                        <label class="normal">@siparis.OdemeDurumTip.Adi</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Sipariş Durumu</span></label>
                        </div>
                        <label class="normal">@siparis.SiparisDurumTip.Adi</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Kdv Hariç Tutar :</span></label>
                        </div>
                        <label class="normal">@string.Format("{0:N}", siparis.UrunKdvHaricToplamTutar)</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Kdv</span></label>
                        </div>
                        <label class="normal">@string.Format("{0:N}", siparis.UrunKdvToplamTutar)</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Ara Toplam</span></label>
                        </div>
                        <label class="normal">@string.Format("{0:N}", siparis.UrunKdvDahilToplamTutar)</label>
                    </div>
                </div>
                @if (siparis.KullanilanParaPuanMiktar > 0)
                {
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="clearfix">
                                <label class="control-label"><span class="bold">Para Puan Tutarı</span></label>
                            </div>
                            <label class="normal">@string.Format("{0:N}", siparis.KullanilanParaPuanMiktar)</label>
                        </div>
                    </div>
                }
                @if (siparis.KuponMiktar > 0)
                {
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="clearfix">
                                <label class="control-label"><span class="bold">Kupon Tutarı</span></label>
                            </div>
                            <label class="normal">@string.Format("{0:N}", siparis.KuponMiktar)</label>
                        </div>
                    </div>
                }
                @if (siparis.GonderimUcreti > 0)
                {
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="clearfix">
                                <label class="control-label"><span class="bold">Gönderim Tutarı</span></label>
                            </div>
                            <label class="normal">@string.Format("{0:N}", siparis.GonderimUcreti)</label>
                        </div>
                    </div>
                }
                @if (siparis.OdemeTipUcreti > 0)
                {
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="clearfix">
                                <label class="control-label"><span class="bold">Ödeme Tip Ücreti</span></label>
                            </div>
                            <label class="normal">@string.Format("{0:N}", siparis.OdemeTipUcreti)</label>
                        </div>
                    </div>
                }
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Ödenecek Tutar</span></label>
                        </div>
                        <label class="normal">@string.Format("{0:N}", siparis.OdenecekTutar)</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Sipariş Tarihi</span></label>
                        </div>
                        <label class="normal">@siparis.SiparisTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Son İşlem Tarihi</span></label>
                        </div>
                        <label class="normal">@siparis.SonIslemTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="clearfix">
                            <label class="control-label"><span class="bold">Ödeme Tarihi</span></label>
                        </div>
                        <label class="normal">@(siparis.OdemeTarihi.HasValue ? siparis.OdemeTarihi.Value.ToString("dd.MM.yyyy HH:mm") : "-")</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label"><span class="bold">Sipariş Detayları</span></label>
                    <table id="tableSiparisDetay" class="table table-striped table-bordered no-margin">
                        <thead>
                            <tr>
                                <th style="width:10%">Ürün</th>
                                <th style="width:10%">Birim Fiyatı</th>
                                <th style="width:10%">Adet</th>
                                <th style="width:10%">Kdv Oranı</th>
                                <th style="width:10%">Kdv Hariç Tutar</th>
                                <th style="width:10%">Kdv Tutarı</th>
                                <th style="width:10%">Kdv Dahil Tutar</th>
                                <th style="width:10%">Aktif mi?</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var spDetay in siparis.SiparisDetay.Where(x => x.AktifMi == true).OrderBy(x => x.SiparisDetayId))
                                {
                                    <tr>
                                        <td>@spDetay.Urun.Adi</td>
                                        <td>@string.Format("{0:N}", spDetay.Urun.KdvDahilTutar / spDetay.Adet) <i class="fa fa-try"></i></td>
                                        <td>@spDetay.Adet</td>
                                        <td>@spDetay.Urun.Vergi.VergiOrani</td>
                                        <td>@string.Format("{0:N}", spDetay.Urun.KdvHaricTutar) <i class="fa fa-try"></i></td>
                                        <td>@string.Format("{0:N}", spDetay.Urun.KdvTutar) <i class="fa fa-try"></i></td>
                                        <td>@string.Format("{0:N}", spDetay.Urun.KdvDahilTutar) <i class="fa fa-try"></i></td>
                                        <td>
                                            <div class="icheck-inline">
                                                @if (spDetay.AktifMi)
                                                {
                                                    <span>EVET</span>
                                                }
                                                else
                                                {
                                                    <span>HAYIR</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label"><span class="bold">Fatura Adresi</span></label>
                    <table id="tableFaturaAdres" class="table table-striped table-bordered no-margin">
                        <tbody>
                            <tr>
                                <td style="width:15%;"><span class="bold">Adres Adı:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Ad @siparis.Adres1.AdresAdi</td>
                                <td style="width:15%;"><span class="bold">Fatura Tipi:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Ad @siparis.Adres1.FaturaTip.Adi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">T.C. Kimlik No:</span></td>
                                <td style="width:35%;">@siparis.Adres1.TcNo</td>
                                <td style="width:15%;"><span class="bold">Ad Soyad:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Ad @siparis.Adres1.Soyad</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Vergi No:</span></td>
                                <td style="width:35%;">@siparis.Adres1.VergiNo</td>
                                <td style="width:15%;"><span class="bold">Vergi Dairesi:</span></td>
                                <td style="width:35%;">@siparis.Adres1.VergiDairesi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Firma Unvanı:</span></td>
                                <td style="width:35%;">@siparis.Adres1.FirmaUnvan</td>
                                <td style="width:15%;"><span class="bold">Adres Bilgisi:</span></td>
                                <td style="width:35%;">@siparis.Adres1.AdresBilgi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Açıklama:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Aciklama</td>
                                <td style="width:15%;"><span class="bold">İlçe / İl:</span></td>
                                <td style="width:35%;">@siparis.Adres1.AdresIlce.IlceAdi / @siparis.Adres1.AdresIl.IlAdi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Telefon 1:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Telefon1</td>
                                <td style="width:15%;"><span class="bold">Telefon 2:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Telefon2</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Posta Kodu:</span></td>
                                <td style="width:35%;">@siparis.Adres1.PostaKodu</td>
                                <td style="width:15%;"><span class="bold">Kayıt Tarihi:</span></td>
                                <td style="width:35%;">@siparis.Adres1.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label"><span class="bold">Gönderim Adresi</span></label>
                    <table id="tableGonderimAdres" class="table table-striped table-bordered no-margin">
                        <tbody>
                            <tr>
                                <td style="width:15%;"><span class="bold">Adres Adı:</span></td>
                                <td style="width:35%;">@siparis.Adres.AdresAdi</td>
                                <td style="width:15%;"><span class="bold">Fatura Tipi:</span></td>
                                <td style="width:35%;">@siparis.Adres.FaturaTip.Adi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">T.C. Kimlik No:</span></td>
                                <td style="width:35%;">@siparis.Adres.TcNo</td>
                                <td style="width:15%;"><span class="bold">Ad Soyad:</span></td>
                                <td style="width:35%;">@siparis.Adres.Ad @siparis.Adres.Soyad</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Vergi No:</span></td>
                                <td style="width:35%;">@siparis.Adres.VergiNo</td>
                                <td style="width:15%;"><span class="bold">Vergi Dairesi:</span></td>
                                <td style="width:35%;">@siparis.Adres.VergiDairesi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Firma Unvanı:</span></td>
                                <td style="width:35%;">@siparis.Adres.FirmaUnvan</td>
                                <td style="width:15%;"><span class="bold">Adres Bilgisi:</span></td>
                                <td style="width:35%;">@siparis.Adres.AdresBilgi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Açıklama:</span></td>
                                <td style="width:35%;">@siparis.Adres.Aciklama</td>
                                <td style="width:15%;"><span class="bold">İlçe / İl:</span></td>
                                <td style="width:35%;">@siparis.Adres.AdresIlce.IlceAdi / @siparis.Adres.AdresIl.IlAdi</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Telefon 1:</span></td>
                                <td style="width:35%;">@siparis.Adres.Telefon1</td>
                                <td style="width:15%;"><span class="bold">Telefon 2:</span></td>
                                <td style="width:35%;">@siparis.Adres.Telefon2</td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Posta Kodu:</span></td>
                                <td style="width:35%;">@siparis.Adres.PostaKodu</td>
                                <td style="width:15%;"><span class="bold">Kayıt Tarihi:</span></td>
                                <td style="width:35%;">@siparis.Adres.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
                                }

<script type="text/javascript">
    $(document).ready(function () {
        @if(ViewBag.Mesaj != null)
        {
            @: callAlert('error', '@(ViewBag.Mesaj)');
        }
    });
</script>