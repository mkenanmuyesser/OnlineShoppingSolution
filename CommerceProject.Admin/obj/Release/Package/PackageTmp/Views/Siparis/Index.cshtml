                                                    <tr>
                                                        <td>İade</td>
                                                        <td><b><span id="spanOzetIade" class="bold"></span>&nbsp;<i class="fa fa-try"></i></b></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Komisyon</td>
                                                        <td><b><span id="spanOzetKomisyon" class="bold"></span>&nbsp;<i class="fa fa-try"></i></b></td>
                                                    </tr>
