@using CommerceProject.Business.Entities

@{
    var bankaHesapNumaralari = ViewBag.BankaHesapNumaralari as List<HesapNumarasi>;
}

@{
    int counter = 0;
}

<input id="hdnBankaHavale" type="hidden" value="0" />
<div>
    <div class="col-sm-6 col-md-6">
        <div class="list-group">
            @foreach (var bankaHesapNumarasi in bankaHesapNumaralari)
        {
            if (counter % 2 == 0)
            {
                    <a href="javascript:;" class="list-group-item bankaHavale">
                        <p class="list-group-item-text">
                            <input type="hidden" class="inpBankaHavale" value="@bankaHesapNumarasi.BankaId" />
                            <div class="icon-bg">
                                <img src="@bankaHesapNumarasi.Banka.Logo" style="height:50px;" />
                            </div>
                            <span><strong>BANKA : </strong>@bankaHesapNumarasi.Banka.Adi</span>
                            <br />
                            <span><strong>IBAN : </strong>@bankaHesapNumarasi.Iban</span>
                            <br />
                            <span><strong>HESAP SAHİBİ : </strong>@bankaHesapNumarasi.HesapSahibi</span>
                            <br />
                            <span><strong>ŞEHİR : </strong>@bankaHesapNumarasi.Sehir</span>
                            <br />
                            <span><strong>HESAP NO : </strong>@bankaHesapNumarasi.HesapNo</span>
                            <br />
                            <span><strong>ŞUBE KODU : </strong>@bankaHesapNumarasi.SubeKodu</span>
                            <br />
                            <span><strong>ŞUBE ADI : </strong>@bankaHesapNumarasi.SubeAdi</span>
                            <br />
                        </p>
                    </a>
            }

            {
                counter++;
            }
        }
        </div>
    </div>
    <div class="col-sm-6 col-md-6">
        <div class="list-group">
            @{
            counter = 0;
            }

            @foreach (var bankaHesapNumarasi in bankaHesapNumaralari)
        {
            if (counter % 2 == 1)
            {
                    <a href="javascript:;" class="list-group-item bankaHavale">
                        <p class="list-group-item-text">
                            <input type="hidden" class="inpBankaHavale" value="@bankaHesapNumarasi.BankaId" />
                            <div class="icon-bg">
                                <img src="@bankaHesapNumarasi.Banka.Logo" style="height:50px;" />
                            </div>
                            <span><strong>BANKA : </strong>@bankaHesapNumarasi.Banka.Adi</span>
                            <br />
                            <span><strong>IBAN : </strong>@bankaHesapNumarasi.Iban</span>
                            <br />
                            <span><strong>HESAP SAHİBİ : </strong>@bankaHesapNumarasi.HesapSahibi</span>
                            <br />
                            <span><strong>ŞEHİR : </strong>@bankaHesapNumarasi.Sehir</span>
                            <br />
                            <span><strong>HESAP NO : </strong>@bankaHesapNumarasi.HesapNo</span>
                            <br />
                            <span><strong>ŞUBE KODU : </strong>@bankaHesapNumarasi.SubeKodu</span>
                            <br />
                            <span><strong>ŞUBE ADI : </strong>@bankaHesapNumarasi.SubeAdi</span>
                            <br />
                        </p>
                    </a>
            }

            {
                counter++;
            }
        }
        </div>
    </div>
</div>

<script type="text/javascript">
    $('.list-group-item').on('click', function (event) {
        event.preventDefault();

        if ($(this).hasClass('bankaHavale')) {

            var id = $(this).find('.inpBankaHavale').val();
            $('#hdnBankaHavale').val(id);

            if ($(this).hasClass('bankaHavale')) {
                $('.bankaHavale').removeClass('list-group-item-info');
                $(this).addClass('list-group-item-info');
            }
        }
    })
</script>