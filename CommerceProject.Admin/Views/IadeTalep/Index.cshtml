@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

<div class="portlet light bordered blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-puzzle font-white"></i>
            <span class="caption-subject bold font-white uppercase"> @ViewBag.PageProperties.PageHeader </span>
            <span class="caption-helper">@ViewBag.PageProperties.PageDescription</span>
        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn green btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                İşlemler
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="/IadeTalep/Save">
                        <i class="fa fa-save"></i> Yeni Kayıt
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="" class="fullscreen" data-original-title="Tam Ekran" title="Tam Ekran">
                        <i class="fa fa-arrows-alt"></i> Tam Ekran
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="portlet-body">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter font-dark"></i>
                    <span class="caption-subject font-dark bold">Filtreleme Kriterleri</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse" data-original-title="Genişlet / Daralt" title="Genişlet / Daralt"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="#" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="txtIadeTalepNo" class="control-label">İade Talep No</label>
                                <div class="input-group">
                                    <input id="txtIadeTalepNo" name="txtIadeTalepNo" class="form-control input-sm maxlength-handler integer focus-sense" maxlength="50" type="text" placeholder="" tabindex="1">
                                    <span class="input-group-btn">
                                        <button class="btn red input-sm " type="button" onclick="iadeTalepGetir();" tabindex="2">Getir</button>
                                    </span>
                                </div>
                            </div>
                        </div>                      
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="dropDownIadeIstekTip" class="control-label">İade İstek Tip</label>
                                <select id="dropDownIadeIstekTip" name="dropDownIadeIstekTip" class="form-control select2" tabindex="3">
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="dropDownIadeNedenTip" class="control-label">İade Neden Tip</label>
                                <select id="dropDownIadeNedenTip" name="dropDownIadeNedenTip" class="form-control select2" tabindex="4">
                                </select>
                            </div>                           
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="dropDownIadeTalepDurum" class="control-label">İşlem Durumu</label>
                                <select id="dropDownIadeTalepDurum" name="dropDownIadeTalepDurum" class="form-control select2" tabindex="5">
                                </select>
                            </div>  
                            <div class="col-md-6">
                                <label class="control-label">İstek Tarihi Aralığı</label>
                                <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                    <div class="col-md-6" style="padding-left:0px !important;">
                                        <div id="dateTimeBaslangic" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Başlangıç Tarihi" tabindex="6">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6" style="padding-right:0px !important;">
                                        <div id="dateTimeBitis" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Bitiş Tarihi" tabindex="7">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">                           
                            <div class="col-md-6">
                                <label class="control-label">Aktif mi?</label>
                                <div class="input-group">
                                    <div class="icheck-inline">
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" class="icheck" value="2"> Tümü
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" checked class="icheck" value="1"> Aktif
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" class="icheck" value="0"> Pasif
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="col-md-offset-5 col-md-7">
                                <button type="button" class="btn blue-madison" onclick="javascript: ara()" tabindex="8">
                                    Ara
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn green-meadow" onclick="javascript: temizle()" tabindex="9">
                                    Temizle
                                    <i class="fa fa-recycle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-list-ul font-dark"></i>
                    <span class="caption-subject bold">Sonuç Listesi</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="box">
                    <div class="box-header">
                        <div id="boxTools" class="box-tools" style="display:none;">
                            <div class="input-group pull-left">
                                <input type="hidden" id="dropDownPagingSize" class="form-control select2" style="width: 100px;" value="5" />
                            </div>
                            <div class="input-group pull-right">
                                <button type="button" class="btn btn-xs green-stripe pull-right" style="margin-right:10px;" onclick="javascript: excelRaporuAl();"><i class="fa fa-file-excel-o"></i>Excel</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="tableIadeTalep" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="5%">İade Talep No</th>
                                        <th width="10%">Ürün</th>
                                        <th width="5%">Adet</th>
                                        <th width="10%">Kullanıcı</th>
                                        <th width="5%">Sipariş No</th>
                                        <th width="10%">İstek Tarihi</th>
                                        <th width="10%">Son İşlem Tarihi</th>
                                        <th width="10%">İade İstek Tip</th>
                                        <th width="10%">İade Neden Tip</th>
                                        <th width="10%">İşlem Durumu</th>
                                        <th width="5%">Aktif mi?</th>
                                        <th width="10%">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div id="footerInfo" class="row" style="display:none;">
                            <div class="col-md-12">
                                <div class="input-group pull-left">
                                    <p id="tableInfo" style="color: #6f6f6f;font-size: 12px;"></p>
                                </div>
                                <div class="input-group pull-right">
                                    <ul id="ulPaging" class="no-margin pull-right"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js{
    <script id="row" type="text/x-jquery-tmpl">
        <tr>
            <td>${IadeTalepId}</td>
            <td>${Urun}</td>
            <td>${Adet}</td>
            <td>${Kullanici}</td>
            <td>${SiparisNo}</td>
            <td>${IstekTarihi}</td>
            <td>${SonIslemTarihi}</td>
            <td>${IadeIstekTip}</td>
            <td>${IadeNedenTip}</td>
            <td>${IslemDurumu}</td>
            <td>
                <div class="icheck-inline">
                    {{if AktifMi}}
                        <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" checked readonly>
                    {{else}}
                        <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" readonly>
                    {{/if}}
                </div>
            </td>
            <td>
                <div class="text-center">
                    <a href="javascript: sil('${IadeTalepId}');" class="btn btn-xs red" data-toggle="tooltip" data-placement="top" title="Sil">
                        <i class="fa fa-remove"></i>
                    </a>
                    <a href="/IadeTalep/Save/${IadeTalepId}" class="btn btn-xs yellow-casablanca" data-toggle="tooltip" data-placement="top" title="Güncelle">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>
            </td>
        </tr>
    </script>

    <script type="text/javascript">
        var iadeTalepIstekTipListesi = @Html.Raw(Json.Encode(ViewBag.IadeTalepIstekTipListesi))
        var iadeTalepNedenTipListesi = @Html.Raw(Json.Encode(ViewBag.IadeTalepNedenTipListesi))
        var iadeTalepDurumTipListesi = @Html.Raw(Json.Encode(ViewBag.IadeTalepDurumTipListesi))

        $(document).ready(function () {
            $(".integer").inputmask('999999999', {
                numericInput: true,
                rightAlignNumerics: false,
                greedy: false,
                placeholder: '000000000'
            });

            $('#dateTimeBaslangic').datepicker({
                autoclose: true,
                dateFormat: "dd.mm.yyyy",
                language: 'tr'
            });
            $('#dateTimeBitis').datepicker({
                autoclose: true,
                dateFormat: "dd.mm.yyyy",
                language: 'tr'
            });

            $('#dropDownIadeIstekTip').select2({
                placeholder: "İade İstek Tipi Seçiniz...",
                allowClear: true,
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: iadeTalepIstekTipListesi,
                escapeMarkup: function (markup) {
                    return markup;
                },
                templateResult: templateData,
                templateSelection: templateDataSelection
            }).val('').trigger('change');
            $('#dropDownIadeNedenTip').select2({
                placeholder: "İade Neden Tipi Seçiniz...",
                allowClear: true,
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: iadeTalepNedenTipListesi,
                escapeMarkup: function (markup) {
                    return markup;
                },
                templateResult: templateData,
                templateSelection: templateDataSelection
            }).val('').trigger('change');
            $('#dropDownIadeTalepDurum').select2({
                placeholder: "İşlem Durumu Seçiniz...",
                allowClear: true,
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: iadeTalepDurumTipListesi,
                escapeMarkup: function (markup) {
                    return markup;
                },
                templateResult: templateData,
                templateSelection: templateDataSelection
            }).val('').trigger('change');

            $('#dropDownPagingSize').select2({
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: [
                    { id: 5, text: 5 },
                    { id: 10, text: 10 },
                    { id: 20, text: 20 },
                    { id: 50, text: 50 }
                ]
            }).on('select2:select', function (e) {
                ara(1, $('#dropDownPagingSize').val());
            });
        });

        function templateData(obj) {
            if (obj.id == '')
                return obj.text;

            if (obj.aktif) {
                return obj.text;
            } else {
                return '<span style="color:red;">' + obj.text + ' (Pasif)</span>';
            }
        }
        function templateDataSelection(obj) {
            if (obj.id == '')
                return obj.text;

            if (obj.aktif) {
                return obj.text;
            } else {
                return '<span style="color:red;">' + obj.text + ' (Pasif)</span>';
            }
        }

        function paging(totalCount, pageCount, pageIndex) {
            $('#ulPaging').pagination('destroy');
            $('#ulPaging').pagination({
                items: totalCount,
                itemsOnPage: pageCount,
                currentPage: pageIndex,
                cssStyle: 'light-theme',
                prevText: 'Önceki Sayfa',
                nextText: 'Sonraki Sayfa',
                onPageClick: function (pageNum) {
                    ara(pageNum, pageCount);
                }
            });
        }

        function ara(pageIndex, pageCount) {
            if ($('#dateTimeBaslangic').datepicker('getDate') != '' && $('#dateTimeBitis').datepicker('getDate')) {
                if ($('#dateTimeBaslangic').datepicker('getDate') > $('#dateTimeBitis').datepicker('getDate')) {
                    callAlert('warning', 'Başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            pageIndex = pageIndex == null ? 1 : pageIndex;
            pageCount = pageCount == null ? parseInt($('#dropDownPagingSize').val()) : pageCount;

            $.ajax({
                url: '/IadeTalep/Ara',
                data: {
                    'iadeTalepNo': $('#txtIadeTalepNo').val() != '' ? parseInt($('#txtIadeTalepNo').val()) : 0,
                    'iadeTalepIstekTipId': ($('#dropDownIadeIstekTip').val() != '' && $('#dropDownIadeIstekTip').val() != null) ? $('#dropDownIadeIstekTip').val() : 0,
                    'iadeTalepNedenTipId': ($('#dropDownIadeNedenTip').val() != '' && $('#dropDownIadeNedenTip').val() != null) ? $('#dropDownIadeNedenTip').val() : 0,
                    'iadeTalepDurumTipId': ($('#dropDownIadeTalepDurum').val() != '' && $('#dropDownIadeTalepDurum').val() != null) ? $('#dropDownIadeTalepDurum').val() : 0,
                    'baslangicTarihi': $('#dateTimeBaslangic').find('input').val() != '' ? $('#dateTimeBaslangic').datepicker('getDate').toUTCString() : null,
                    'bitisTarihi': $('#dateTimeBitis').find('input').val() != '' ? $('#dateTimeBitis').datepicker('getDate').toUTCString() : null,
                    'aktiflik': parseInt($('input[name=rdAktif]:checked').val()),
                    'sayfaSayisi': pageCount,
                    'sayfaSirasi': pageIndex
                },
                type: "get",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();

                    $('#tableIadeTalep tbody').children().remove();
                    $('#row').tmpl(result.sonucListesi).appendTo('#tableIadeTalep tbody');

                    $('#tableIadeTalep .make-switch').bootstrapSwitch();
                    $('[data-toggle="tooltip"]').tooltip();

                    // table info
                    var txt = '';
                    if (result.toplamKayitSayisi > 0) {
                        var firstPart = ((result.sayfaSirasi - 1) * (result.sayfaSayisi) + 1);
                        var secondPart = (result.sayfaSirasi * result.sayfaSayisi) > result.toplamKayitSayisi ? result.toplamKayitSayisi : (result.sayfaSirasi * result.sayfaSayisi);
                        txt = 'Toplam ' + result.toplamKayitSayisi + ' kayıttan ' + firstPart + '-' + secondPart + ' gösteriliyor.';

                        $('#boxTools').show();
                        $('#footerInfo').show();
                    }
                    else {
                        txt = 'Hiç kayıt bulunamadı.';

                        $('#boxTools').hide();
                        $('#footerInfo').hide();
                    }
                    $('#tableInfo').text(txt);

                    paging(result.toplamKayitSayisi, result.sayfaSayisi, result.sayfaSirasi);
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function sil(id) {
            confirm('ONAY', '<p>Silmek istediğinize emin misiniz?</p>', function () {
                $.ajax({
                    url: '/IadeTalep/Sil/' + id,
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function () {
                        showLoadingModal();
                    },
                    success: function (result) {
                        hideLoadingModal();
                        if (result) {
                            callAlert('success', 'Silme işlemi başarılı.');
                            ara();
                        }
                        else {
                            callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                        }
                    },
                    error: function () {
                        hideLoadingModal();
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                });
            });
        }

        function temizle() {
            $('#txtIadeTalepNo').val('');
            $('#dropDownIadeIstekTip').val('').trigger('change');
            $('#dropDownIadeNedenTip').val('').trigger('change');
            $('#dropDownIadeTalepDurum').val('').trigger('change');
            $('#dateTimeBaslangic').data('datepicker').setDate(null);
            $('#dateTimeBitis').data('datepicker').setDate(null);
        }

        function excelRaporuAl() {
            if ($('#dateTimeBaslangic').datepicker('getDate') != '' && $('#dateTimeBitis').datepicker('getDate')) {
                if ($('#dateTimeBaslangic').datepicker('getDate') > $('#dateTimeBitis').datepicker('getDate')) {
                    callAlert('warning', 'Başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            var iadeTalepNo = $('#txtIadeTalepNo').val() != '' ? parseInt($('#txtIadeTalepNo').val()) : 0;
            var iadeTalepIstekTipId = ($('#dropDownIadeIstekTip').val() != '' && $('#dropDownIadeIstekTip').val() != null) ? $('#dropDownIadeIstekTip').val() : 0;
            var iadeTalepNedenTipId = ($('#dropDownIadeNedenTip').val() != '' && $('#dropDownIadeNedenTip').val() != null) ? $('#dropDownIadeNedenTip').val() : 0;
            var iadeTalepDurumTipId = ($('#dropDownIadeTalepDurum').val() != '' && $('#dropDownIadeTalepDurum').val() != null) ? $('#dropDownIadeTalepDurum').val() : 0;
            var baslangicTarihi = $('#dateTimeBaslangic').find('input').val() != '' ? $('#dateTimeBaslangic').datepicker('getDate').toUTCString() : null;
            var bitisTarihi = $('#dateTimeBitis').find('input').val() != '' ? $('#dateTimeBitis').datepicker('getDate').toUTCString() : null;
            var aktiflik = parseInt($('input[name=rdAktif]:checked').val());

            window.location.href = '/IadeTalep/ExcelRaporuAl?iadeTalepNo=' + iadeTalepNo
                + '&iadeTalepIstekTipId=' + iadeTalepIstekTipId
                + '&iadeTalepNedenTipId=' + iadeTalepNedenTipId
                + '&iadeTalepDurumTipId=' + iadeTalepDurumTipId
                + '&baslangicTarihi=' + baslangicTarihi
                + '&bitisTarihi=' + bitisTarihi
                + '&aktiflik=' + aktiflik;
        }

        function iadeTalepGetir() {
            if ($('#txtIadeTalepNo').val() == '') {
                callAlert('warning', 'Lütfen İade talep no girin.');
                return false;
            }

            $('#dropDownIadeIstekTip').val('').trigger('change');
            $('#dropDownIadeNedenTip').val('').trigger('change');
            $('#dropDownIadeTalepDurum').val('').trigger('change');
            $('#dateTimeBaslangic').data('datepicker').setDate(null);
            $('#dateTimeBitis').data('datepicker').setDate(null);

            $.ajax({
                url: '/IadeTalep/Ara',
                data: {
                    'iadeTalepNo': $('#txtIadeTalepNo').val() != '' ? parseInt($('#txtIadeTalepNo').val()) : '',
                    'iadeTalepIstekTipId': ($('#dropDownIadeIstekTip').val() != '' && $('#dropDownIadeIstekTip').val() != null) ? $('#dropDownIadeIstekTip').val() : 0,
                    'iadeTalepNedenTipId': ($('#dropDownIadeNedenTip').val() != '' && $('#dropDownIadeNedenTip').val() != null) ? $('#dropDownIadeNedenTip').val() : 0,
                    'iadeTalepDurumTipId': ($('#dropDownIadeTalepDurum').val() != '' && $('#dropDownIadeTalepDurum').val() != null) ? $('#dropDownIadeTalepDurum').val() : 0,
                    'baslangicTarihi': $('#dateTimeBaslangic').find('input').val() != '' ? $('#dateTimeBaslangic').datepicker('getDate').toUTCString() : null,
                    'bitisTarihi': $('#dateTimeBitis').find('input').val() != '' ? $('#dateTimeBitis').datepicker('getDate').toUTCString() : null,
                    'aktiflik': parseInt($('input[name=rdAktif]:checked').val()),
                    'sayfaSayisi': 5,
                    'sayfaSirasi': 1
                },
                type: "get",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();

                    $('#tableIadeTalep tbody').children().remove();
                    $('#row').tmpl(result.sonucListesi).appendTo('#tableIadeTalep tbody');

                    $('#tableIadeTalep .make-switch').bootstrapSwitch();
                    $('[data-toggle="tooltip"]').tooltip();

                    // table info
                    var txt = '';
                    if (result.toplamKayitSayisi > 0) {
                        var firstPart = ((result.sayfaSirasi - 1) * (result.sayfaSayisi) + 1);
                        var secondPart = (result.sayfaSirasi * result.sayfaSayisi) > result.toplamKayitSayisi ? result.toplamKayitSayisi : (result.sayfaSirasi * result.sayfaSayisi);
                        txt = 'Toplam ' + result.toplamKayitSayisi + ' kayıttan ' + firstPart + '-' + secondPart + ' gösteriliyor.';

                        $('#boxTools').show();
                        $('#footerInfo').show();
                    }
                    else {
                        txt = 'Hiç kayıt bulunamadı.';

                        $('#boxTools').hide();
                        $('#footerInfo').hide();
                    }
                    $('#tableInfo').text(txt);

                    paging(result.toplamKayitSayisi, result.sayfaSayisi, result.sayfaSirasi);
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }
    </script>
}