@{
    string action = ViewContext.RouteData.Values["action"].ToString();
}

<div id="sidebar" class="sidebar col-sm-3 col-md-3">
    <aside class="widget menu">
        <header>
            <h3 class="title">Kullanıcı Hesap İşlemleri</h3>
        </header>
        <nav>
            <ul>
                <li @if(action=="Index"){ @Html.Raw("class='active'") }>                    
                    <a href="/Kullanici/Index"><i class="fa fa-gears item-icon"></i>Yönetim Panelim</a>
                </li>
                <li @if(action=="Bilgi"){ @Html.Raw("class='active'") }>
                    <a href="/Kullanici/Bilgi"><i class="fa fa-user item-icon"></i>Hesap Bilgilerim</a>
                </li>
                <li @if(action=="Adres"){ @Html.Raw("class='active'") }>
                    <a href="/Kullanici/Adres"><i class="fa fa-pencil-square-o item-icon"></i>Adreslerim</a>
                </li>
                <li @if(action=="Siparis"){ @Html.Raw("class='active'") }>
                    <a href="/Kullanici/Siparis"><i class="fa fa-shopping-cart item-icon"></i>Sipariş Geçmişim</a>
                </li>
                <li @if(action=="IstekListesi"){ @Html.Raw("class='active'") }>
                    <a href="/Kullanici/IstekListesi"><i class="fa fa-heart item-icon"></i>Favori Listem</a>
                </li>
                <li @if(action=="Yorum"){ @Html.Raw("class='active'") }>
                    <a href="/Kullanici/Yorum"><i class="fa fa-comment item-icon"></i>Yorumlarım</a>
                </li>
            </ul>
        </nav>
    </aside>
</div>