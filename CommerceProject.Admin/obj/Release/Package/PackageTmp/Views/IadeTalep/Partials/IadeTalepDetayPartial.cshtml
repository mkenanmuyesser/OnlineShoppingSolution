@using CommerceProject.Business.Entities;

@{
    var iadeTalep = ViewBag.IadeTalep as IadeTalep;
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-12">
            <div class="form-group">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered no-margin">
                        <tbody>
                            <tr>
                                <td style="width:15%;"><span class="bold">Kullanıcı Eposta</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.SiparisDetay.Siparis.Kullanici.Eposta</label>
                                </td>
                                <td style="width:15%;"><span class="bold">Kullanıcı Ad Soyad</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.SiparisDetay.Siparis.Kullanici.KullaniciDetay.Ad @iadeTalep.SiparisDetay.Siparis.Kullanici.KullaniciDetay.Soyad</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Kullanıcı Üyelik Tarihi</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.SiparisDetay.Siparis.Kullanici.UyelikTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                                </td>
                                <td style="width:15%;"><span class="bold">Kullanıcı Son Giriş Tarihi</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.SiparisDetay.Siparis.Kullanici.SonGirisTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">İade Talep Durum Tipi</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.IadeTalepDurumTip.Adi</label>
                                </td>
                                <td style="width:15%;"><span class="bold">İade Talep İstek Tipi</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.IadeTalepIstekTip.Adi</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">İade Talep Neden Tip</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.IadeTalepNedenTip.Adi</label>
                                </td>
                                <td style="width:15%;"></td>
                                <td style="width:35%;">
                                    <label>&nbsp;</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">İade Nedeni</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.IadeNeden</label>
                                </td>
                                <td style="width:15%;"><span class="bold">İade İsteği</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.IadeIstek</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Kullanıcı Açıklama</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.KullaniciAciklama</label>
                                </td>
                                <td style="width:15%;"><span class="bold">Personel Açıklama</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.PersonelAciklama</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">İade Talep İstek Tarihi</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                                </td>
                                <td style="width:15%;"><span class="bold">Son İşlem Tarihi</span></td>
                                <td style="width:35%;">
                                    <label>@iadeTalep.GuncellemeTarihi.ToString("dd.MM.yyyy HH:mm")</label>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;"><span class="bold">Aktif mi?</span></td>
                                <td style="width:35%;">
                                    <label>@(iadeTalep.AktifMi ? "AKTİF" : "PASİF")</label>
                                </td>
                                <td style="width:15%;"></td>
                                <td style="width:35%;">
                                    <label>&nbsp;</label>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label"><span class="bold">Sipariş Detayı</span></label>
                <div class="table-responsive">
                    <table id="tableSiparisDetay" class="table table-striped table-bordered no-margin">
                        <thead>
                            <tr>
                                <th style="width:20%">Ürün</th>
                                <th style="width:10%">Adet</th>
                                <th style="width:10%">KDV Dahil Birim Tutarı</th>
                                <th style="width:10%">KDV Hariç Birim Tutarı</th>
                                <th style="width:10%">KDV Birim Tutarı</th>
                                <th style="width:10%">Toplam KDV Dahil Tutar</th>
                                <th style="width:10%">Toplam KDV Hariç Tutar</th>
                                <th style="width:10%">Toplam KDV Tutar</th>
                                <th style="width:10%">Aktif mi?</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@iadeTalep.SiparisDetay.Urun.Adi</td>
                                <td>@iadeTalep.SiparisDetay.Adet</td>
                                <td>@iadeTalep.SiparisDetay.HesaplananBirimKdvDahilTutar</td>
                                <td>@iadeTalep.SiparisDetay.HesaplananBirimKdvHaricTutar</td>
                                <td>@iadeTalep.SiparisDetay.HesaplananBirimKdvTutar</td>
                                <td>@iadeTalep.SiparisDetay.HesaplananKdvDahilTutar</td>
                                <td>@iadeTalep.SiparisDetay.HesaplananKdvHaricTutar</td>
                                <td>@iadeTalep.SiparisDetay.HesaplananKdvTutar</td>
                                <td>
                                    <div class="icheck-inline">
                                        @if (iadeTalep.SiparisDetay.AktifMi)
                                        {
                                            <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" checked readonly>
                                        }
                                        else
                                        {
                                            <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" readonly>
                                        }
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableSiparisDetay .make-switch').bootstrapSwitch();
    });
</script>