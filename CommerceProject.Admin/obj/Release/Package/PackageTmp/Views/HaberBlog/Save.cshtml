@using CommerceProject.Business.Entities

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

@{
    var haberBlog = ViewBag.HaberBlog as HaberBlog;
    var haberBlogResimler = ViewBag.HaberBlogResimler as List<HaberBlogResim>;
    var haberBlogYorumlar = ViewBag.HaberBlogYorumlar as List<HaberBlogYorum>;
    var kullanicilar = ViewBag.Kullanicilar as List<Kullanici>;
}

@section css{
    <style type="text/css">
        .none{
            display: none;
        }

        .red-border{
            border: 1px solid red;
        }

        #tableResim tbody tr td{
            vertical-align: middle !important;
        }
    </style>
}

<div class="portlet light bordered blue-steel">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-puzzle font-white"></i>
            <span class="caption-subject bold font-white uppercase"> @ViewBag.PageProperties.PageHeader </span>
            <span class="caption-helper">@ViewBag.PageProperties.PageDescription</span>
        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn green btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                İşlemler
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="/HaberBlog/Save">
                        <i class="fa fa-save"></i> Yeni Kayıt
                    </a>
                </li>
                <li>
                    <a href="/HaberBlog/Index">
                        <i class="fa fa-search"></i> Arama
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="" class="fullscreen" data-original-title="Tam Ekran" title="Tam Ekran">
                        <i class="fa fa-arrows-alt"></i> Tam Ekran
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="portlet-body">
        <div class="portlet light bordered">
            <div class="portlet-body form">
                <div class="tabbable-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1" data-toggle="tab"> Haber/Blog Bilgileri </a>
                        </li>
                        <li>
                            <a href="#tab_2" data-toggle="tab"> Seo </a>
                        </li>
                        @if (haberBlog.HaberBlogId == 0)
                        {
                            <li class="disabled">
                                <a href="#tab_3">
                                    Resimler
                                    <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                                </a>
                            </li>
                            <li class="disabled">
                                <a href="#tab_4">
                                    Yorumlar
                                    <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="#tab_3" data-toggle="tab">
                                    Resimler
                                    <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@haberBlogResimler.Count</span>
                                </a>
                            </li>
                            <li>
                                <a href="#tab_4" data-toggle="tab">
                                    Yorumlar
                                    <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@haberBlogYorumlar.Count</span>
                                </a>
                            </li>
                        }
                    </ul>
                    <form id="comform">
                        <input id="hdnHaberBlogId" type="hidden" value="@haberBlog.HaberBlogId" />

                        <div class="form-body tab-content" style="padding:10px !important;border: 1px solid #ddd !important;">
                            <div class="tab-pane active" id="tab_1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtHBBaslik" class="control-label">Başlık<span class="required"> * </span></label>
                                            <div class="input-icon right">
                                                <i class="fa"></i>
                                                <input id="txtHBBaslik" name="txtHBBaslik" class="form-control input-sm maxlength-handler" maxlength="50" placeholder="Başlık Giriniz..." value="@haberBlog.Baslik" tabindex="1">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="dropDownHBTip" class="control-label">Haber/Blog Tipi<span class="required"> * </span></label>
                                            <div class="input-icon right">
                                                <i class="fa"></i>
                                                <select id="dropDownHBTip" name="dropDownHBTip" class="form-control select2" tabindex="2"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="txtHBIcerik" class="control-label">İçerik<span class="required"> * </span></label>
                                            <label id="editorRequired" class="none" style="font-size:12px;"><span class="required"> &nbsp;&nbsp;Bu alanın doldurulması zorunludur. </span></label>
                                            <div id="editor-form-group" class="input-icon right">
                                                <i class="fa"></i>
                                                <textarea id="txtHBIcerik" name="txtHBIcerik" class="form-control" rows="6" tabindex="3">@haberBlog.Icerik</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Yayınlanma Tarihi<span class="required"> * </span></label>
                                            <div class="input-icon right">
                                                <i class="fa"></i>
                                                <div id="dateTimeHBYayinlanmaTarihi" name="dateTimeHBYayinlanmaTarihi" class="input-group date" data-provide="datepicker">
                                                    <input type="text" class="form-control" name="dateTimeHBYayinlanmaTarihi" placeholder="Yayınlanma Tarihi" value="@(haberBlog.HaberBlogId > 0 ? haberBlog.Tarih.ToString("dd.MM.yyyy") : "")" tabindex="4">
                                                    <div class="input-group-addon">
                                                        <span class="glyphicon glyphicon-th"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Başlangıç - Bitiş Tarihi</label>
                                            <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                                <div class="col-md-6" style="padding-left:0px !important;">
                                                    <div class="form-group">
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <div id="dateTimeHBBaslangicTarihi" class="input-group date" data-provide="datepicker">
                                                                <input type="text" class="form-control" placeholder="Başlangıç Tarihi" 
                                                                       value="@(haberBlog.BaslangicTarihi.HasValue ? haberBlog.BaslangicTarihi.Value.ToString("dd.MM.yyyy") : "")" tabindex="5">
                                                                <div class="input-group-addon">
                                                                    <span class="glyphicon glyphicon-th"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6" style="padding-right:0px !important;">
                                                    <div class="form-group">
                                                        <div class="input-icon right">
                                                            <i class="fa"></i>
                                                            <div id="dateTimeHBBitisTarihi" class="input-group date" data-provide="datepicker">
                                                                <input type="text" class="form-control" placeholder="Bitiş Tarihi" 
                                                                       value="@(haberBlog.BitisTarihi.HasValue ? haberBlog.BitisTarihi.Value.ToString("dd.MM.yyyy") : "")" tabindex="6">
                                                                <div class="input-group-addon">
                                                                    <span class="glyphicon glyphicon-th"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtHBYorum" class="control-label">Yorum Yapılabilsin mi?</label>
                                            <div class="icheck-inline">
                                                <input id="txtHBYorum" name="txtHBYorum" type="checkbox" class="make-switch" data-size="small" data-on-text="Evet" data-off-text="Hayır" 
                                                       @(haberBlog.HaberBlogId > 0 ? (haberBlog.YorumYapilabilsinMi ? "checked" : "") : "checked") tabindex="7">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtHBAktifMi" class="control-label">Aktif mi?</label>
                                            <div class="icheck-inline">
                                                <input id="txtHBAktifMi" name="txtHBAktifMi" type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" 
                                                       @(haberBlog.HaberBlogId > 0 ? (haberBlog.AktifMi ? "checked" : "") : "checked") tabindex="8">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <div class="col-md-offset-5 col-md-7">
                                        @if (haberBlog.HaberBlogId == 0)
                                        {
                                            <button type="submit" class="btn blue" tabindex="9">
                                                Kaydet
                                                <i class="fa fa-save"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn yellow" tabindex="9">
                                                Güncelle
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        }
                                        <a href="/HaberBlog/Index" class="btn red" tabindex="10">
                                            İptal
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="tab_2">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtHBMetaTitle" class="control-label">Meta Title</label>
                                            <textarea id="txtHBMetaTitle" name="txtHBMetaTitle" style="resize:none;" rows="1" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Meta Title Giriniz..." tabindex="1">@haberBlog.MetaTitle</textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtHBMetaKeywords" class="control-label">Meta Keywords</label>
                                            <textarea id="txtHBMetaKeywords" name="txtHBMetaKeywords" style="resize:none;" rows="1" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Meta Keywords Giriniz..." tabindex="2">@haberBlog.MetaKeywords</textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="txtHBMetaDescription" class="control-label">Meta Description</label>
                                            <textarea id="txtHBMetaDescription" name="txtHBMetaDescription" style="resize:none;" rows="1" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Meta Description Giriniz..." tabindex="3">@haberBlog.MetaDescription</textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <div class="col-md-offset-5 col-md-7">
                                        @if (haberBlog.HaberBlogId == 0)
                                        {
                                            <button type="submit" class="btn blue" tabindex="4">
                                                Kaydet
                                                <i class="fa fa-save"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn yellow" tabindex="4">
                                                Güncelle
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        }
                                        <a href="/HaberBlog/Index" class="btn red" tabindex="5">
                                            İptal
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="tab_3">
                                <div>
                                    <div id="uploadSuccess" class="alert alert-success" style="display:none;">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                        <i class="fa fa-check fa-lg"></i> Resimler başarıyla yüklendi.
                                    </div>
                                    <div id="uploadDanger" class="alert alert-danger" style="display:none;">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                        <i class="fa fa-warning fa-lg"></i> İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.
                                    </div>
                                    <div id="tab_images_uploader_container" class="text-align-reverse margin-bottom-10">
                                        <a id="tab_images_uploader_pickfiles" href="javascript:;" class="btn btn-success">
                                            <i class="fa fa-plus"></i> Resimleri Seç
                                        </a>
                                        <a id="tab_images_uploader_uploadfiles" href="javascript:;" class="btn btn-primary">
                                            <i class="fa fa-share"></i> Resimleri Yükle
                                        </a>
                                    </div>
                                    <div class="row">
                                        <div id="tab_images_uploader_filelist" class="col-md-6 col-sm-12"> </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table id="tableResim" class="table table-bordered table-hover">
                                            <thead>
                                                <tr role="row" class="heading">
                                                    <th style="width:5%;">Resim</th>
                                                    <th style="width:28%;">Açıklama</th>
                                                    <th style="width:20%;">Alt Attribute</th>
                                                    <th style="width:20%;">Title Attribute</th>
                                                    <th style="width:10%;">Tarih</th>
                                                    <th style="width:5%;">Yeni mi?</th>
                                                    <th style="width:5%;">Aktif mi?</th>
                                                    <th style="width:7%;">İşlem</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (var resim in haberBlogResimler)
                                                    {
                                                        <tr class="data-show" data-id="@resim.ResimId">
                                                            <td>
                                                                <a class="img-hb" href="javascript:;" data-toggle="popover" data-img="@resim.ResimYolu">
                                                                    <img style="width:64px;height:64px;" src="@resim.ResimYolu" />
                                                                </a>
                                                            </td>
                                                            <td class="hb-aciklama">@resim.Aciklama</td>
                                                            <td class="hb-altattr">@resim.AltAttribute</td>
                                                            <td class="hb-titleattr">@resim.TitleAttribute</td>
                                                            <td class="hb-tarih">@resim.Tarih.ToString("dd.MM.yyyy")</td>
                                                            <td class="hb-yenimi">
                                                                <div class="icheck-inline">
                                                                    <input id="yenimi-@(resim.ResimId)" type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" @(resim.YeniMi ? "checked" : "") readonly>
                                                                </div>
                                                            </td>
                                                            <td class="hb-aktifmi">
                                                                <div class="icheck-inline">
                                                                    <input id="aktifmi-@(resim.ResimId)" type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" @(resim.AktifMi ? "checked" : "") readonly>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <a href="javascript:;" class="btn btn-xs yellow-gold" data-toggle="tooltip" data-placement="top" title="Güncelle" onclick="editModeResim('@resim.ResimId', this);">
                                                                    <i class="fa fa-edit"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        <tr class="data-edit none" data-id="@resim.ResimId">
                                                            <td>
                                                                <a class="img-hb" href="javascript:;" data-toggle="popover" data-img="@resim.ResimYolu">
                                                                    <img style="width:64px;height:64px;" src="@resim.ResimYolu" />
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <input id="ack-@(resim.ResimId)" type="text" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Açıklama..." value="@resim.Aciklama" />
                                                            </td>
                                                            <td>
                                                                <input id="altattr-@(resim.ResimId)" type="text" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Alt Attribute..." value="@resim.AltAttribute" />
                                                            </td>
                                                            <td>
                                                                <input id="titleattr-@(resim.ResimId)" type="text" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Title Attribute..." value="@resim.TitleAttribute" />
                                                            </td>
                                                            <td>
                                                                <div id="tarih-@(resim.ResimId)" class="input-group date" data-provide="datepicker">
                                                                    <input type="text" class="form-control input-sm" placeholder="Bitiş Tarihi" value="@resim.Tarih.ToString("dd.MM.yyyy")">
                                                                    <div class="input-group-addon">
                                                                        <span class="glyphicon glyphicon-th"></span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="icheck-inline">
                                                                    <input id="yeni-@(resim.ResimId)" type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" @(resim.YeniMi ? "checked" : "")>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="icheck-inline">
                                                                    <input id="aktif-@(resim.ResimId)" type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" @(resim.AktifMi ? "checked" : "")>
