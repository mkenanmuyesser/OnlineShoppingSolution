<div class="portlet light bordered">
    <div class="portlet-body">
        <div id="chartRaporUrunStokAnaliz" class="chart" style="height: 400px;"></div>
    </div>
</div>

<script type="text/javascript">
    var chartData = @Html.Raw(Json.Encode(ViewBag.ChartData))

    $(document).ready(function () {
        var chart = AmCharts.makeChart("chartRaporUrunStokAnaliz", {
            "type": "serial",
            "theme": "light",
            "startDuration": 2,
            "fontFamily": 'Open Sans',
            "legend": {
                "useGraphSettings": true
            },
            "dataProvider": chartData,
            "synchronizeGrid": true,
            "valueAxes": [{
                "id": "v1",
                "axisColor": "#E43A45",//"#FF6600",
                "axisThickness": 2,
                "axisAlpha": 1
            }, {
                "id": "v3",
                "axisColor": "#1BBC9B", //"#B0DE09",
                "axisThickness": 2,
                "gridAlpha": 0,
                "offset": 50,
                "axisAlpha": 1
            }],
            "graphs": [{
                "balloonText": "[[category]]: <b>[[value]] adet çıkış</b>",
                "valueAxis": "v1",
                "lineColor": "#E43A45", //"#FF6600",
                "bullet": "round",
                "bulletBorderThickness": 1,
                "hideBulletsCount": 30,
                "title": "Stoktan Çıkış",
                "valueField": "StokCikisToplamMiktar",
                "fillAlphas": 0
            }, {
                "balloonText": "[[category]]: <b>[[value]] adet giriş</b>",
                "valueAxis": "v3",
                "lineColor": "#1BBC9B", //"#B0DE09",
                "bullet": "triangleUp",
                "bulletBorderThickness": 1,
                "hideBulletsCount": 30,
                "title": "Stoğa Giriş",
                "valueField": "StokGirisToplamMiktar",
                "fillAlphas": 0
            }],
            "chartScrollbar": {},
            "chartCursor": {
                "cursorAlpha": 0,
                "valueLineEnabled": true,
                "valueLineBalloonEnabled": true,
                "valueLineAlpha": 0.5,
                "fullWidth": true,
                "zoomable": false
            },
            "categoryField": "Ay",
            "categoryAxis": {
                "gridPosition": "start",
                "axisAlpha": 0,
                "gridAlpha": 0,
                "axisColor": "#DADADA",
                "minorGridEnabled": true
            },
            "zoomOutText": "Tümünü Göster"
        });
    });
</script>