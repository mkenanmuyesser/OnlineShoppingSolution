@using CommerceProject.Business.Custom;

@{
    var siparisSonuc = Model as SiparisSonucDataObj;
}

<div>
    <div class="col-sm-12 col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Birim Fiyatı</th>
                        <th>Adet</th>
                        <th>Kdv Oranı</th>
                        <th>Kdv Hariç Tutar</th>
                        <th>Kdv Tutarı</th>
                        <th>Kdv Dahil Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sepettekiUrun in siparisSonuc.SepettekiUrunler)
                    {
                        <tr>
                            <td>@sepettekiUrun.Urun.Adi</td>
                            <td>@string.Format("{0:N}", sepettekiUrun.Urun.KdvDahilTutar/ sepettekiUrun.Adet) <i class="fa fa-try"></i></td>       
                            <td>@sepettekiUrun.Adet</td>
                            <td>@sepettekiUrun.Urun.Vergi.VergiOrani</td>
                            <td>@string.Format("{0:N}", sepettekiUrun.Urun.KdvHaricTutar) <i class="fa fa-try"></i></td>
                            <td>@string.Format("{0:N}", sepettekiUrun.Urun.KdvTutar) <i class="fa fa-try"></i></td>                          
                            <td>@string.Format("{0:N}", sepettekiUrun.Urun.KdvDahilTutar) <i class="fa fa-try"></i></td>                         
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="7">
                            <span class="pull-right">
                                <b>Kdv Hariç Tutar : </b> @string.Format("{0:N}", siparisSonuc.UrunToplam.KdvHaricTutar)
                                <i class="fa fa-try"></i>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7">
                            <span class="pull-right">
                                <b>Kdv : </b> @string.Format("{0:N}", siparisSonuc.UrunToplam.KdvTutar)
                                <i class="fa fa-try"></i>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7">
                            <span class="pull-right">
                                <b>Ara Toplam : </b> @string.Format("{0:N}", siparisSonuc.UrunToplam.KdvDahilTutar)
                                <i class="fa fa-try"></i>
                            </span>
                        </td>
                    </tr>                    
                    @if (siparisSonuc.ParaPuanMiktar > 0)
                    {
                        <tr>
                            <td colspan="7">
                                <span class="pull-right">
                                    <b>Para Puan Tutarı : </b> @string.Format("{0:N}", siparisSonuc.ParaPuanMiktar)
                                    <i class="fa fa-try"></i>
                                </span>
                            </td>
                        </tr>
                    }
                    @if (siparisSonuc.KuponMiktar > 0)
                    {
                        <tr>
                            <td colspan="7">
                                <span class="pull-right">
                                    <b>Kupon Tutarı : </b> @string.Format("{0:N}", siparisSonuc.KuponMiktar)
                                    <i class="fa fa-try"></i>
                                </span>
                            </td>
                        </tr>
                    }                  
                    @if (siparisSonuc.GonderimUcreti > 0)
                    {
                        <tr>
                            <td colspan="7">
                                <span class="pull-right">
                                    <b>Gönderim Ücreti : </b> @string.Format("{0:N}", siparisSonuc.GonderimUcreti)
                                    <i class="fa fa-try"></i>
                                </span>
                            </td>
                        </tr>
                    }
                    @if (siparisSonuc.OdemeTipUcreti > 0)
                    {
                        <tr>
                            <td colspan="7">
                                <span class="pull-right">
                                    <b>Ödeme Yöntemi Ücreti : </b> @string.Format("{0:N}", siparisSonuc.OdemeTipUcreti)
                                    <i class="fa fa-try"></i>
                                </span>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="7">
                            <span class="pull-right">
                                <b>Ödenecek Tutar : </b> @string.Format("{0:N}", siparisSonuc.OdenecekTutar)
                                <i class="fa fa-try"></i>
                            </span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
