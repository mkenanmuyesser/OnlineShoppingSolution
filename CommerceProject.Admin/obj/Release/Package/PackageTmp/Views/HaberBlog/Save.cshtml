            }
        });
    });

        function kaydet() {
            if ($('#dateTimeHBBaslangicTarihi').datepicker('getDate') != '' && $('#dateTimeHBBitisTarihi').datepicker('getDate')) {
                if ($('#dateTimeHBBaslangicTarihi').datepicker('getDate') > $('#dateTimeHBBitisTarihi').datepicker('getDate')) {
                    callAlert('warning', 'Başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            if (CKEDITOR.instances.txtHBIcerik.getData() == '') {
                $('#editor-form-group').addClass('has-error');
                $('#editor-form-group').removeClass('has-success');
                $('#editor-form-group').find('i').removeClass('fa-check');
                $('#editor-form-group').find('i').addClass('fa-warning');
                $('#editor-form-group').find('i').css('color', '#ed6b75');
                return;
            }
            else {
                $('#editor-form-group').addClass('has-success');
                $('#editor-form-group').removeClass('has-error');
                $('#editor-form-group').find('i').addClass('fa-check');
                $('#editor-form-group').find('i').removeClass('fa-warning');
                $('#editor-form-group').find('i').css('color', '#36c6d3');

                // Kayıt işlemi
                var data = {
                    HaberBlogId: parseInt($('#hdnHaberBlogId').val()),
                    HaberBlogTipId: ($('#dropDownHBTip').val() != '' && $('#dropDownHBTip').val() != null) ? $('#dropDownHBTip').val() : 0,
                    Baslik: $('#txtHBBaslik').val(),
                    Icerik: CKEDITOR.instances.txtHBIcerik.getData(),
                    YorumYapilabilsinMi: $('#txtHBYorum').is(":checked") ? true : false,
                    MetaKeywords: $('#txtHBMetaKeywords').val(),
                    MetaDescription: $('#txtHBMetaDescription').val(),
                    MetaTitle: $('#txtHBMetaTitle').val(),
                    BaslangicTarihi: $('#dateTimeHBBaslangicTarihi').find('input').val() != '' ? $('#dateTimeHBBaslangicTarihi').datepicker('getDate').toUTCString() : null,
                    BitisTarihi: $('#dateTimeHBBitisTarihi').find('input').val() != '' ? $('#dateTimeHBBitisTarihi').datepicker('getDate').toUTCString() : null,
                    Tarih: $('#dateTimeHBYayinlanmaTarihi').find('input').val() != '' ? $('#dateTimeHBYayinlanmaTarihi').datepicker('getDate').toUTCString() : null,
                    AktifMi: $('#txtHBAktifMi').is(":checked") ? true : false
                };

                $.ajax({
                    url: '/HaberBlog/KaydetGuncelle',
                    data: JSON.stringify(data),
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function () {
                        showLoadingModal();
                    },
                    success: function (result) {
                        hideLoadingModal();
                        if (result > 0) {
                            callAlert('success', 'Kayıt işlemi başarılı.');
                            setTimeout(function myfunction() {
                                window.location.href = '/HaberBlog/Save/' + result;
                            }, 1500);
                        }
                        else {
                            callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                        }
                    },
                    error: function () {
                        hideLoadingModal();
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                });
            }
        }

        function editModeResim(id, obj) {
            $('#tableResim .data-edit').addClass('none');
            $('#tableResim .data-show').removeClass('none');

            var trRow = $(obj).closest('tr').addClass('none');
            $('#tableResim .data-edit[data-id="' + id + '"]').removeClass('none');
        }

        function CancelModeResim(id, obj) {
            $('#tableResim .data-edit').addClass('none');
            $('#tableResim .data-show').removeClass('none');
        }

        function SaveModeResim(id, obj) {
            var aciklama = $('#ack-' + id).val();
            var altAttr = $('#altattr-' + id).val();
            var titleAttr = $('#titleattr-' + id).val();
            var tarih = $('#tarih-' + id).find('input').val() != '' ? $('#tarih-' + id).datepicker('getDate').toUTCString() : null;
            var tarihText = $('#tarih-' + id).find('input').val();
            var yenimi = $('#yeni-' + id).is(":checked") ? true : false;
            var aktifmi = $('#aktif-' + id).is(":checked") ? true : false;

            var data = {
                ResimId: id,
                Aciklama: aciklama,
                AltAttribute: altAttr,
                TitleAttribute: titleAttr,
                Tarih: tarih,
                YeniMi: yenimi,
                AktifMi: aktifmi
            };

            $.ajax({
                url: '/HaberBlog/ResimKaydetGuncelle',
                data: JSON.stringify(data),
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result) {
                        callAlert('success', 'Resim güncelleme işlemi başarılı.');

                        var trRow = $('#tableResim .data-show[data-id="' + id + '"]');
                        trRow.find('.hb-aciklama').html(aciklama);
                        trRow.find('.hb-altattr').html(altAttr);
                        trRow.find('.hb-titleattr').html(titleAttr);
                        trRow.find('.hb-tarih').html(tarihText);

                        $('#yenimi-' + id).bootstrapSwitch('destroy').prop('checked', yenimi).bootstrapSwitch();
                        $('#aktifmi-' + id).bootstrapSwitch('destroy').prop('checked', aktifmi).bootstrapSwitch();

                        $('#tableResim .data-edit').addClass('none');
                        $('#tableResim .data-show').removeClass('none');
                    }
                    else {
                        callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function yorumAktiflikDegistir(id, obj) {
            $.ajax({
                url: '/HaberBlog/YorumAktiflikDegistir',
                data: {
                    'yorumId': id,
                    'aktiflik': $(obj).is(":checked") ? true : false
                },
                type: "get",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();

                    if (!result) {
                        callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                    } else {
                        callAlert('success', 'Yorum başarıyla güncellendi.');
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }
    </script>
