@using CommerceProject.Business.Entities;

@{
    var siparis = ViewBag.Siparis as Siparis;
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableSiparisUrun .make-switch').bootstrapSwitch();
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="tableSiparisUrun" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:15%">Barkod</th>
                        <th style="width:15%;">Kodu</th>
                        <th style="width:30%;">Adı</th>
                        <th style="width:30%">Açıklama</th>
                        <th style="width:10%">Aktif mi?</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var spDetay in siparis.SiparisDetay)
                        {
                            <tr>
                                <td>@spDetay.Urun.Barkod</td>
                                <td>@spDetay.Urun.UrunKod</td>
                                <td>@spDetay.Urun.Adi</td>
                                <td>@spDetay.Urun.KisaAciklama</td>
                                <td>
                                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" @(spDetay.Urun.AktifMi ? "checked" : "") readonly>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>