@using CommerceProject.Business.Entities

@{
    var siparisOdemeTipleri = ViewBag.SiparisOdemeTipleri as List<SiparisOdemeTip>;
}

<input id="hdnOdemeTip" type="hidden" value="0" />
@foreach (var siparisOdemeTip in siparisOdemeTipleri)
{ <div class="col-sm-4 col-md-4">
        <div class="list-group">
            <a href="javascript:;" class="list-group-item odemeTip">
                <p class="list-group-item-text">
                    <input type="hidden" class="inpOdemeTip" value="@siparisOdemeTip.SiparisOdemeTipId" />
                    <div class="icon icon-100 text-danger">
                        @if (siparisOdemeTip.SiparisOdemeTipId == 1)
                        {
                            <i class="fa fa-credit-card"></i>
                        }
                        else if (siparisOdemeTip.SiparisOdemeTipId == 2)
                        {
                            <i class="fa fa-print"></i>
                        }
                        else
                        {
                            <i class="fa fa-truck"></i>
                        }
                    </div>
                    <br />
                    <span>@siparisOdemeTip.Adi</span>
                </p>
            </a>
        </div>
    </div>
}

<script type="text/javascript">
    $('.list-group-item').on('click', function (event) {
        event.preventDefault();

        if ($(this).hasClass('odemeTip')) {

            var id = $(this).find('.inpOdemeTip').val();
            $('#hdnOdemeTip').val(id);

            if ($(this).hasClass('odemeTip')) {
                $('.odemeTip').removeClass('list-group-item-info');
                $(this).addClass('list-group-item-info');

                $(".edit").each(function (i, obj) {
                    if (obj.getAttribute('href').toString() == "#step-5") {
                        obj.click();
                    }
                });
            }
        }        
    })
</script>