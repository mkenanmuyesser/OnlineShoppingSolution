@using CommerceProject.Business.Entities;

@{ 
    var sorular = ViewBag.AnketSorular as List<AnketSoru>;
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableAnketSoru .make-switch').bootstrapSwitch();
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="tableAnketSoru" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:10%">Sıra</th>
                        <th style="width:70%;">Soru</th>
                        <th style="width:20%">Aktif mi?</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var soru in sorular)
                        {
                            <tr>
                                <td>@soru.Sira</td>
                                <td>@soru.Soru</td>
                                <td>
                                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" @(soru.AktifMi ? "checked" : "") readonly>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>