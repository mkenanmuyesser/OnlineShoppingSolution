                        </div>

                        <div class="form-actions">
                            <div class="col-md-offset-5 col-md-7">
                                <button type="button" class="btn blue-madison" onclick="javascript: ara()" tabindex="17">
                                    Ara
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn green-meadow" onclick="javascript: temizle()" tabindex="18">
                                    Temizle
                                    <i class="fa fa-recycle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-list-ul font-dark"></i>
                    <span class="caption-subject bold">Sonuç Listesi</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="box">
                    <div class="box-header">
                        <div id="boxTools" class="box-tools" style="display:none;">
                            <div class="input-group pull-left">
                                <input type="hidden" id="dropDownPagingSize" class="form-control select2" style="width: 100px;" value="5" />
                            </div>
                            <div class="input-group pull-right">
                                <button type="button" class="btn btn-xs green-stripe pull-right" style="margin-right:10px;" onclick="javascript: excelRaporuAl();"><i class="fa fa-file-excel-o"></i>Excel</button>
                                <button type="button" class="btn btn-xs blue-stripe pull-right" style="margin-right:10px;" onclick="javascript: seciliFaturaYazdir();"><i class="fa fa-print"></i>Seçili Siparişlerin Proforma Faturalarını Yazdır</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="tableSiparis" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="8%" style="vertical-align:middle;">
                                            <div class="text-center">
                                                Tümünü Seç<br />
                                                <input id="chkTumunuSec" type="checkbox" data-size="small">
                                            </div>
                                        </th>
                                        <th width="5%">Sipariş No</th>
                                        <th width="10%">Sipariş Durumu</th>
                                        <th width="10%">Ödeme Durumu</th>
                                        <th width="10%">Ödeme Tipi</th>
                                        <th width="22%">Müşteri</th>
                                        <th width="10%">Sipariş Tarihi</th>
