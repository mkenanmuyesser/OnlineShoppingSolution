                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result == null || result == '') {
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                    else {
                        menuSepetYenile();
                        window.location = result;
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function menuKullaniciYenile() {
            $('#divMenuKullaniciPartial').html('');
            $('#divMenuKullaniciPartial').load('/Home/MenuKullaniciPartial');
        }

        function menuSepetYenile() {
            $('#divMenuSepetPartial').html('');
            $('#divMenuSepetPartial').load('/Home/MenuSepetPartial');
        }

        function showLoadingModal(part) {
            if (part == null || part == '') {
                $('body').loadingModal({ text: 'Lütfen Bekleyin...' });
                $('body').loadingModal('animation', 'cubeGrid');
            }
            else {
                $('#' + part).loadingModal({ text: 'Lütfen Bekleyin...' });
                $('#' + part).loadingModal('animation', 'cubeGrid');
            }
        }

        function hideLoadingModal(part) {
            if (part == null || part == '') {
                $('body').loadingModal('destroy');
            }
            else {
                $('#' + part).loadingModal('destroy');
            }
        }
