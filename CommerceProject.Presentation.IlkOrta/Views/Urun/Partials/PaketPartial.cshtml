@using CommerceProject.Business.Entities

@{
    var paket = Model as Paket;
}

<div class="col-sm-3 col-md-3 text-center" >
    @*<div class="col-sm-3 col-md-3 double-product product-danger rotation">
        <div class="col-sm-3 col-md-3 double-product product-info rotation">
        <div class="col-sm-3 col-md-3 double-product product-success rotation">
        <div class="col-sm-3 col-md-3 double-product product-warning rotation">*@
    <div class="double-product" data-appear-animation="fadeIn">
        <div class="product rotation">
            <div class="default" style="background-color: #f7f7f7 !important;">
                <a href="/Urun/Paket/@paket.Slug" class="product-image">
                    @if (paket.AnaResim == null)
                    {
                        <img class='replace-2x' src='/Uploads/Product/resim_yok.png' alt="" title="" width="110" height="110" />
                    }
                    else
                    {
                        <img class="replace-2x" src="@paket.AnaResim.ResimYolu" alt="" title="" width="110" height="110" />
                    }
                </a>
                <div class="product-description">
                    <div class="vertical">
                        <h3 class="product-name">
                            <a href="/Urun/Paket/@paket.Slug">@paket.Adi</a>
                        </h3>
                        <div class="price-box">
                            <span class="price-old">@string.Format("{0:N}", paket.EskiFiyat) <i class="fa fa-try"></i></span>
                            <span class="price">@string.Format("{0:N}", paket.Fiyat)  <i class="fa fa-try"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-hover">
                <h3 class="product-name">
                    <a href="/Urun/Paket/@paket.Slug">@paket.Adi</a>
                </h3>
                <div class="price-box">
                    <span class="price-old" style="color:white !important;">@string.Format("{0:N}", paket.EskiFiyat) <i class="fa fa-try"></i></span>
                    <span class="price">@string.Format("{0:N}", paket.Fiyat)  <i class="fa fa-try"></i></span>
                </div>   
                <h3 class="product-name">
                    <a href="/Urun/Paket/@paket.Slug">PAKET DETAYI</a>
                </h3>
                <div class="actions">
                    <a href="javascript:;" onclick="sepetePaketEkle(@paket.PaketId,1); return false;" title="Sepete Ekle">
                        <img src="/Content/Theme/img/png-icons/sepeteEkle.png" width="16" height="16" />
                    </a>
                    <a href="javascript:;" onclick="hemenPaketAl(@paket.PaketId,1); return false;" title="Hemen Al">
                        <img src="/Content/Theme/img/png-icons/hemenAl.png" width="16" height="16" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
