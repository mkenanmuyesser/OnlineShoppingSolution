@using CommerceProject.Business.Entities

@{
    ViewBag.Title = "Odeme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var kullanici = ViewBag.Kullanici as Kullanici;
    var icerikAyar = ViewBag.IcerikAyar as IcerikAyar;
    var sepettekiUrunler = ViewBag.Sepet as List<Sepet>;
    var kullaniciAdresler = ViewBag.KullaniciAdresler as List<KullaniciAdres>;
    var gonderimler = ViewBag.Gonderimler as List<Gonderim>;
    var siparisOdemeTipleri = ViewBag.SiparisOdemeTipleri as List<SiparisOdemeTip>;
}

<div id="main" class="page">
    <header class="page-header">
        <div class="container">
            <h2 class="title">Ödeme İşlemi</h2>
        </div>
    </header>
    <div class="container" data-appear-animation="fadeIn">
        <div class="row">
            <article class="content col-sm-9 col-md-9">
                <ul id="checkoutsteps" class="clearfix panel-group">
                    <li class="panel">
                        <a href="#step-1" class="step-title step" data-parent="#checkoutsteps" data-toggle="collapse">
                            <div class="number">1</div>
                            <h6>Üye Bilgileri</h6>
                        </a>
                        <div id="step-1" class="collapse in">
                            <div class="step-content">
                                <div id="divKullaniciGiris">
                                    @Html.Partial("~/Views/Sepet/Partials/KullaniciGirisPartial.cshtml")
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="buttons-box clearfix btn-icon">
                                            <a id="btnForwardStep2WithUser" href="#step-2-user" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-pinterest step pull-right" style="display:none;width:120px;">Üye Girişi <i class="fa fa-angle-double-right"></i></a>
                                            <a id="btnForwardStep2WithoutUser" href="#step-2" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-skype step pull-right" style="display:none;width:120px;">Misafir Girişi <i class="fa fa-angle-double-right"></i></a>                                 
                                            <a id="btnForwardStep2" href="#step-2" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-css3 step pull-right" style="display:none;">Devam <i class="fa fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="panel">
                        <a href="#step-2" class="collapsed step-title step" data-parent="#checkoutsteps" data-toggle="collapse">
                            <div class="number">2</div>
                            <h6>Teslimat ve Fatura Bilgileri</h6>
                        </a>
                        <div id="step-2" class="collapse">
                            <div class="step-content">
                                <div id="divAdresBilgi"></div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="buttons-box clearfix btn-icon pull-left">
                                            <a id="btnBackStep1" href="#step-1" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-bitbucket step"><i class="fa fa-angle-double-left"> Önceki Adım</i></a>
                                        </div>
                                        <div class="buttons-box clearfix btn-icon">
                                            <a id="btnForwardStep3" href="#step-3" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-css3 step">Devam <i class="fa fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="panel">
                        <a href="#step-3" class="collapsed step-title step" data-parent="#checkoutsteps" data-toggle="collapse">
                            <div class="number">3</div>
                            <h6>Gönderim</h6>
                        </a>
                        <div id="step-3" class="collapse">
                            <div class="step-content">
                                @Html.Partial("~/Views/Sepet/Partials/GonderimTipPartial.cshtml")
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="buttons-box clearfix btn-icon pull-left">
                                            <a id="btnBackStep2" href="#step-2" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-bitbucket step"><i class="fa fa-angle-double-left"> Önceki Adım</i></a>
                                        </div>
                                        <div class="buttons-box clearfix btn-icon">
                                            <a id="btnForwardStep4" href="#step-4" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-css3 step">Devam <i class="fa fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="panel">
                        <a href="#step-4" class="collapsed step-title step" data-parent="#checkoutsteps" data-toggle="collapse">
                            <div class="number">4</div>
                            <h6>Ödeme Yöntemi</h6>
                        </a>
                        <div id="step-4" class="collapse">
                            <div class="step-content">
                                @Html.Partial("~/Views/Sepet/Partials/OdemeTipPartial.cshtml")
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="buttons-box clearfix btn-icon pull-left">
                                            <a href="#step-3" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-bitbucket step"><i class="fa fa-angle-double-left"> Önceki Adım</i></a>
                                        </div>
                                        <div class="buttons-box clearfix btn-icon">
                                            <a href="#step-5" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-css3 step">Devam <i class="fa fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="panel">
                        <a href="#step-5" class="collapsed step-title step" data-parent="#checkoutsteps" data-toggle="collapse">
                            <div class="number">5</div>
                            <h6>Ödeme Bilgileri</h6>
                        </a>
                        <div id="step-5" class="collapse">
                            <div class="step-content">
                                <div id="divOdemeTipPartial">
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="buttons-box clearfix btn-icon pull-left">
                                            <a href="#step-4" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-bitbucket step"><i class="fa fa-angle-double-left"> Önceki Adım</i></a>
                                        </div>
                                        <div class="buttons-box clearfix btn-icon">
                                            <a href="#step-6" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-css3 step">Devam <i class="fa fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="panel">
                        <a href="#step-6" class="collapsed step-title step" data-parent="#checkoutsteps" data-toggle="collapse">
                            <div class="number">6</div>
                            <h6>Sipariş Özeti</h6>
                        </a>
                        <div id="step-6" class="collapse">
                            <div class="step-content">
                                <div id="divSiparisOzetPartial">
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="buttons-box clearfix btn-icon pull-left">
                                            <a href="#step-5" data-parent="#checkoutsteps" data-toggle="collapse" class="icon color rounded icon-bitbucket step"><i class="fa fa-angle-double-left"> Önceki Adım</i></a>
                                        </div>
                                        <div class="buttons-box clearfix btn-icon">
                                            <a href="javascript:;" class="icon color rounded icon-skype" onclick="javascript: odemeYap();">Siparişi Tamamla <i class="fa fa-shopping-cart"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </article>

            <div id="sidebar" class="col-sm-3 col-md-3 sidebar checkout-progress">
                <aside class="widget">
                    <header>
                        <h3 class="title">Satın alma durumu</h3>
                    </header>
                    <ul class="progress-list">
                        <li class="active"><a href="#step-1" data-parent="#checkoutsteps" data-toggle="collapse" class="edit"><i class="fa fa-pencil"></i> Güncelle</a>Üye Bilgileri</li>
                        <li><a href="#step-2" data-parent="#checkoutsteps" data-toggle="collapse" class="edit"><i class="fa fa-pencil"></i> Güncelle</a>Teslimat ve Fatura Bilgileri</li>
                        <li><a href="#step-3" data-parent="#checkoutsteps" data-toggle="collapse" class="edit"><i class="fa fa-pencil"></i> Güncelle</a>Gönderim</li>
                        <li><a href="#step-4" data-parent="#checkoutsteps" data-toggle="collapse" class="edit"><i class="fa fa-pencil"></i> Güncelle</a>Ödeme Yöntemi</li>
                        <li><a href="#step-5" data-parent="#checkoutsteps" data-toggle="collapse" class="edit"><i class="fa fa-pencil"></i> Güncelle</a>Ödeme Bilgileri</li>
                        <li><a href="#step-6" data-parent="#checkoutsteps" data-toggle="collapse" class="edit"><i class="fa fa-pencil"></i> Git</a>Sipariş Özeti</li>
                    </ul>
                </aside>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script type="text/javascript">
        $(document).ready(function () {
            kullaniciGirisDuzenle();
        });

        $(".edit").on('click', function (event) {
            event.preventDefault();
            var stepAttribute = $(this).attr('href').toString();

            if (stepAttribute == '#step-2') {
                if (step1Validation() == false) {
                    return false;
                }
                else {
                    adresBilgiGetir();
                }
            }
            if (stepAttribute == '#step-2-user') {
                var id = $('#hdnKullaniciId').val();
                if (id == '0') {
                    kullaniciGiris();
                }
            }

            if (stepAttribute == '#step-3') {
                if (step2Validation() == false) {
                    return false;
                }
            }
            if (stepAttribute == '#step-4') {
                if (step3Validation() == false) {
                    return false;
                }
            }
            if (stepAttribute == '#step-5') {
                if (step4Validation() == false) {
                    return false;
                }
                else {
                    odemeTipGetir();
                }
            }
            if (stepAttribute == '#step-6') {
                if (step5Validation() == false) {
                    return false;
                }
                else {
                    var data = {
                        GonderimTipId: parseInt($('#hdnGonderimTip').val()),
                        OdemeTipId: parseInt($('#hdnOdemeTip').val()),
                        TaksitId: $('#hdnOdemeTip').val() == '0' || $('#hdnOdemeTip').val() != '1' ? null : parseInt($('#hdnKrediKartiTaksit').val()),
                        BankaId: $('#hdnOdemeTip').val() == '0' || $('#hdnOdemeTip').val() != '2' ? null : parseInt($('#hdnBankaHavale').val()),
                    };

                    $('#divSiparisOzetPartial').load('/Sepet/SiparisOzetPartial', data, function () {
                        hideLoadingModal('step-6');
                    });

                    showLoadingModal('step-6');
                }
            }

            $(".edit").parents().removeClass('active');
            $(this).parent().addClass('active');
        });

        $(".step").on('click', function (event) {
            event.preventDefault();
            var stepIsActive = $(this).parent().hasClass('active');
            var stepAttribute = $(this).attr('href').toString();

            if (stepAttribute == '#step-2') {
                if (step1Validation() == false) {
                    return false;
                }
            }
            if (stepAttribute == '#step-2-user') {
                var id = $('#hdnKullaniciId').val();
                if (id == '0') {
                    kullaniciGiris();
                }
            }
            if (stepAttribute == '#step-3') {
                if (step2Validation() == false) {
                    return false;
                }
            }
            if (stepAttribute == '#step-4') {
                if (step3Validation() == false) {
                    return false;
                }
            }
            if (stepAttribute == '#step-5') {
                if (step4Validation() == false) {
                    return false;
                }
            }
            if (stepAttribute == '#step-6') {
                if (step5Validation() == false) {
                    return false;
                }
            }

            if (stepIsActive) {
                $(".edit").parents().removeClass('active');
            }
            else {
                $(".edit").each(function (i, obj) {
                    if (obj.getAttribute('href').toString() == stepAttribute) {
                        obj.click();
                    }
                });
            }
        });

        function odemeTipGetir()
        {
            var id = $('#hdnOdemeTip').val();
            if (id == '1') {
                $('#divOdemeTipPartial').load('/Sepet/KrediKartiOdemePartial', function () {
                    hideLoadingModal('step-5');
                });
            }
            else if (id == '2') {
                $('#divOdemeTipPartial').load('/Sepet/BankaHavaleOdemePartial', function () {
                    hideLoadingModal('step-5');
                });
            }
            else if (id == '3') {
                $('#divOdemeTipPartial').load('/Sepet/KapidaOdemePartial', function () {
                    hideLoadingModal('step-5');
                });
            }

            showLoadingModal('step-5');
        }
       
        step1Validation = function () {
            var id = $('#hdnKullaniciId').val();
            if (id == '0' && '@icerikAyar.MisafirSatinAlmaAktifMi'== 'False') {
                    callAlert('warning', 'Lütfen üye girişi yapınız.');
                    return false;
           }
        }

        step2Validation = function () {
            var id = $('#hdnKullaniciId').val();
            if (id == '0') {
                if ('@icerikAyar.MisafirSatinAlmaAktifMi'== 'False')
                {
                    callAlert('warning', 'Lütfen üye girişi yapınız.');
                    return false;
                }
                else if ($('#txtAdresAdi').val() == '' ||
                    $('#drpFaturaTipleri').val() == '' ||
                    $('#drpFaturaTipleri').val() == null ||
                    $('#txtAd').val() == '' ||
                    $('#txtSoyad').val() == '' ||
                    $('#drpAdresIl').val() == '' ||
                    $('#drpAdresIl').val() == null ||
                    $('#drpAdresIlce').val() == '' ||
                    $('#drpAdresIlce').val() == null ||
                    $('#txtAdresBilgi').val() == '' ||
                    $('#txtTelefon1').val() == '') {
                    callAlert('warning', 'Lütfen gerekli alanları doldurunuz.');
                    return false;
                }
                else if ($('#drpFaturaTipleri').val() == '2' &&
                    ($('#txtFirmaUnvan').val() == '' ||
                        $('#txtVergiDairesi').val() == '' ||
                        $('#txtVergiNo').val() == '')) {
                    callAlert('warning', 'Lütfen seçtiğiniz fatura tipinden dolayı "Firma Unvan", "Vergi Dairesi" ve "Vergi No" alanlarını lütfen doldurunuz');
                    return false;
                }
                else {
                    return true;
                }
            }
            else {
                if ($('.teslimAdres').hasClass('list-group-item-info') && $('.faturaAdres').hasClass('list-group-item-info')) {
                    return true;
                }
                else {
                    callAlert('warning', 'Lütfen bir adres seçimi yapınız. Kayıtlı adresiniz yok ise lütfen bir tane ekleyiniz.');
                    return false;
                }
            }
        }

        step3Validation = function () {
            if ($('.gonderimTip').hasClass('list-group-item-info')) {
                return true;
            }
            else {
                callAlert('warning', 'Lütfen bir gönderim tipi seçiniz.');
                return false;
            }
        }

        step4Validation = function () {
            if ($('.odemeTip').hasClass('list-group-item-info')) {
                return true;
            }
            else {
                callAlert('warning', 'Lütfen bir ödeme tipi seçiniz.');
                return false;
            }
        }

        step5Validation = function () {
            var odemeTipId = $('.odemeTip.list-group-item-info').find('input').val();
            if (odemeTipId == '1') {
                var kartTaksitBilgi = $('.rbtnKrediKarti:checked').val();
                var kartAdSoyadBilgi = $('#txtKartSahibininAdiSoyadi').val();
                var kartNumaraBilgi = $('#txtKartNumarasi').val();
                var kartDogrulamaBilgi = $('#hdnCardValidation').val();
                var kartCVVBilgi = $('#txtCVV').val();
                var kartSonKullanmaAyBilgi = $('#slcSonKullanmaAy').val();
                var kartSonKullanmaYilBilgi = $('#slcSonKullanmaYil').val();

                if (kartTaksitBilgi == '' ||
                    kartAdSoyadBilgi == '' ||
                    kartNumaraBilgi == '' ||
                    kartNumaraBilgi.length != 19 ||
                    kartCVVBilgi == '' ||
                    kartCVVBilgi.length != 3 ||
                    kartSonKullanmaAyBilgi == '' ||
                    kartSonKullanmaYilBilgi == '') {
                    callAlert('warning', 'Lütfen kredi kartı bilgilerini doğru bir şekilde doldurunuz.');
                    return false;
                }
                else if (kartDogrulamaBilgi == 'false') {
                    callAlert('warning', 'Kredi kartı numarası hatalıdır.');
                    return false;
                }
                else {
                    return true;
                }
            }
            else if (odemeTipId == '2') {
                if ($('.bankaHavale').hasClass('list-group-item-info')) {
                    return true;
                }
                else {
                    callAlert('warning', 'Lütfen havale edilecek hesabı seçiniz.');
                    return false;
                }
            }
            else if (odemeTipId == '3') {
                return true;
            }
            else {
                return false;
            }
        }

        function kullaniciGirisDuzenle()
        {
            $('#btnForwardStep2WithoutUser').removeAttr('style');

            var id = $('#hdnKullaniciId').val();
            if (id == '0') {
                if ('@icerikAyar.MisafirSatinAlmaAktifMi'.toString() == 'True') {
                    $('#btnForwardStep2WithoutUser').css({
                        'display': 'block',
                        'width': '120px'
                    });
                }
                else {
                    $('#btnForwardStep2WithoutUser').css({
                        'display': 'none',
                        'width': '120px'
                    });
                }

                $('#btnForwardStep2WithUser').css({
                    'display': 'block',
                    'width': '120px'
                });
                $('#btnForwardStep2').css({
                    'display': 'none',
                    'width': '120px'
                });
            }
            else {
                $('#btnForwardStep2WithUser').css({
                    'display': 'none',
                    'width': '120px'
                });
                $('#btnForwardStep2WithoutUser').css({
                    'display': 'none',
                    'width': '120px'
                });
                $('#btnForwardStep2').css({
                    'display': 'block',
                    'width': '120px'
                });
            }
        }

        function kullaniciGirisGetir() {
            showLoadingModal('step-1');
            $('#divKullaniciGiris').html('');
            $('#divKullaniciGiris').load('/Sepet/KullaniciGirisPartial', function () {
                hideLoadingModal('step-1');
                kullaniciGirisDuzenle();
            });
        }

        function adresBilgiGetir() {
            showLoadingModal('step-2');
            $('#divAdresBilgi').html('');
            $('#divAdresBilgi').load('/Sepet/AdresBilgiPartial', function () {
                hideLoadingModal('step-2');
            });
        }

        function odemeYap() {

            var adresData = null;
            var id = $('#hdnKullaniciId').val();
            if (id == '0') {
                if ($('#txtAdresAdi').val() == '' ||
                    $('#drpFaturaTipleri').val() == '' ||
                    $('#drpFaturaTipleri').val() == null ||
                    $('#txtAd').val() == '' ||
                    $('#txtSoyad').val() == '' ||
                    $('#drpAdresIl').val() == '' ||
                    $('#drpAdresIl').val() == null ||
                    $('#drpAdresIlce').val() == '' ||
                    $('#drpAdresIlce').val() == null ||
                    $('#txtAdresBilgi').val() == '' ||
                    $('#txtTelefon1').val() == '') {
                    callAlert('warning', 'Lütfen gerekli adres alanlarını doldurunuz.');
                    return false;
                }
                else {
                    adresData = {
                        FaturaTipId: parseInt($('#drpFaturaTipleri').val()),
                        AdresAdi: $('#txtAdresAdi').val(),
                        Ad: $('#txtAd').val(),
                        Soyad: $('#txtSoyad').val(),
                        TcNo: $('#txtTcNo').val(),
                        FirmaUnvan: $('#txtFirmaUnvan').val(),
                        VergiNo: $('#txtVergiNo').val(),
                        VergiDairesi: $('#txtVergiDairesi').val(),
                        AdresBilgi: $('#txtAdresBilgi').val(),
                        Aciklama: $('#txtAdresBilgi').val(),
                        PostaKodu: $('#txtPostaKodu').val(),
                        AdresIlceId: parseInt($('#drpAdresIlce').val()),
                        AdresIlId: parseInt($('#drpAdresIl').val()),
                        Telefon1: $('#txtTelefon1').val(),
                        Telefon2: $('#txtTelefon2').val(),
                    };
                }
            }
            var data = {
                GonderimTipId: parseInt($('#hdnGonderimTip').val()),
                OdemeTipId: parseInt($('#hdnOdemeTip').val()),
                AdresData: adresData,
                GonderimAdresId: parseInt($('#hdnGonderimAdres').val()),
                FaturaAdresId: parseInt($('#hdnFaturaAdres').val()),
                TaksitId: $('#hdnOdemeTip').val() == '0' || $('#hdnOdemeTip').val() != '1' ? null : parseInt($('#hdnKrediKartiTaksit').val()),
                BankaId: $('#hdnOdemeTip').val() == '0' || $('#hdnOdemeTip').val() != '2' ? null : parseInt($('#hdnBankaHavale').val()),
                KrediKartiBilgi: $('#hdnOdemeTip').val() != '1' ? null :
                {
                    KrediKartiTipId: parseInt($('#hdnCardType').val()),
                    KartNumarasi: $('#txtKartNumarasi').val(),
                    Ay: parseInt($('#slcSonKullanmaAy').val()),
                    Yil: parseInt($('#slcSonKullanmaYil').val()),
                    GuvenlikKodu: $('#txtCVV').val(),
                    KartSahibi: $('#txtKartSahibininAdiSoyadi').val(),
                    Taksit: parseInt($('.rbtnKrediKarti:checked').val()),
                }
            };

            $.ajax({
                url: '/Sepet/SiparisTamamla',
                data: JSON.stringify(data),
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result == null || result == '') {
                        callAlert('error', 'İşlem sırasında bir hata oluştu.');
                    }
                    else if (result.success=="true") {
                        window.location = result.location;
                    }
                    else {
                        callAlert('error', 'İşlem sırasında bir hata oluştu.<br/>'+ result);                      
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    captchaObj.ReloadImage();
                }
            });
        }
    </script>
}