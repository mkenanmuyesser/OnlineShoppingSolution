@using CommerceProject.Business.Entities

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

@{
    var kullanici = ViewBag.Kullanici as Kullanici;
    var kullaniciDetay = ViewBag.KullaniciDetay as KullaniciDetay;
    var kullaniciSiparisListesi = ViewBag.KullaniciSiparisListesi as List<Siparis>;
    var kullaniciIadeTalepListesi = ViewBag.KullaniciIadeTalepListesi as List<IadeTalep>;
    var kullaniciIstekListesi = ViewBag.KullaniciIstekListesi as List<IstekListesi>;
    var kullaniciAdresListesi = ViewBag.KullaniciAdresListesi as List<KullaniciAdres>;

    var yetkiListesi = ViewBag.YetkiListesi as List<Yetki>;
    var kullaniciYetkiListesi = ViewBag.KullaniciYetkiListesi as List<KullaniciYetki>;
}

@section css{
    <style type="text/css">
        .tooltip {
            z-index: 10151 !important;
        }

        #tableAdres tr th {
            font-size: 12px !important;
        }
        #tableAdres tr td {
            font-size: 12px !important;
        }
    </style>
}

<div class="modal fade" id="adresModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form id="form_adres">
                    <input id="txtKullaniciAdresId" type="hidden" value="" />
                    <input id="txtAdresId" type="hidden" value="" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresAdi" class="control-label">Adres Adı<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input id="txtAdresAdi" name="txtAdresAdi" class="form-control input-sm maxlength-handler" maxlength="50" placeholder="Adres Adı Giriniz...">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dropDownFaturaTipi" class="control-label">Fatura Tipi<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <select id="dropDownFaturaTipi" name="dropDownFaturaTipi" class="form-control select2" style="width:100%;"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresTCNo" class="control-label">T.C. Kimlik No<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input id="txtAdresTCNo" name="txtAdresTCNo" class="form-control input-sm tc-number maxlength-handler focus-sense" maxlength="11" placeholder="T.C. Kimlik No Giriniz...">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresAd" class="control-label">Adı<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input id="txtAdresAd" name="txtAdresAd" class="form-control input-sm maxlength-handler" maxlength="200" placeholder="Ad Giriniz...">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresSoyad" class="control-label">Soyadı<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input id="txtAdresSoyad" name="txtAdresSoyad" class="form-control input-sm maxlength-handler" maxlength="200" placeholder="Soyad Giriniz...">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresVergiNo" class="control-label">Vergi No</label>
                                <input id="txtAdresVergiNo" name="txtAdresVergiNo" class="form-control input-sm maxlength-handler" maxlength="10" placeholder="Vergi No Giriniz...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresVergiDairesi" class="control-label">Vergi Dairesi</label>
                                <input id="txtAdresVergiDairesi" name="txtAdresVergiDairesi" class="form-control input-sm maxlength-handler" maxlength="200" placeholder="Vergi Dairesi Giriniz...">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresSirket" class="control-label">Firma Unvanı</label>
                                <input id="txtAdresSirket" name="txtAdresSirket" class="form-control input-sm maxlength-handler" maxlength="200" placeholder="Firma Unvanı Giriniz...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresAciklama" class="control-label">Açıklama</label>
                                <input id="txtAdresAciklama" name="txtAdresAciklama" class="form-control input-sm maxlength-handler" maxlength="250" placeholder="Açıklama Giriniz...">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="txtAdresAdres" class="control-label">Adres<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <textarea id="txtAdresAdres" name="txtAdresAdres" style="resize:none;" rows="2" class="form-control input-sm maxlength-handler" maxlength="500" placeholder="Adres Giriniz..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dropDownIl" class="control-label">İl<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <select id="dropDownIl" name="dropDownIl" class="form-control select2" style="width:100%;"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dropDownIlce" class="control-label">İlçe<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <select id="dropDownIlce" name="dropDownIlce" class="form-control select2" style="width:100%;"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresTelefon1" class="control-label">Telefon 1<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input id="txtAdresTelefon1" name="txtAdresTelefon1" class="form-control input-sm com-phone maxlength-handler" maxlength="50" placeholder="0 (5xx) xxx-xxxx">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresTelefon2" class="control-label">Telefon 2</label>
                                <input id="txtAdresTelefon2" name="txtAdresTelefon2" class="form-control input-sm com-phone maxlength-handler" maxlength="50" placeholder="0 (5xx) xxx-xxxx">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresPostaKodu" class="control-label">Posta Kodu<span class="required"> * </span></label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input id="txtAdresPostaKodu" name="txtAdresPostaKodu" class="form-control input-sm com-number maxlength-handler" maxlength="50" placeholder="Posta Kodu Giriniz...">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtAdresAktifMi" class="control-label">Aktif mi?</label>
                                <div class="icheck-inline">
                                    <input id="txtAdresAktifMi" name="txtAdresAktifMi" type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" checked>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-top: 10px;border-top: 1px solid #EFEFEF !important;">
                        <div class="col-md-offset-5 col-md-7">
                            <button id="btnAdresSubmit" type="submit" class="btn btn-sm blue">Ekle</button>
                            <button type="button" class="btn btn-sm red-haze" data-dismiss="modal">İptal</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detayModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:900px;">
        <div class="modal-content" style="width:900px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body" style="border-bottom: 1px solid #EFEFEF !important;">
                <div id="divDetay"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn red-haze" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<div class="portlet light bordered blue-steel">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-puzzle font-white"></i>
            <span class="caption-subject bold font-white uppercase"> @ViewBag.PageProperties.PageHeader </span>
            <span class="caption-helper">@ViewBag.PageProperties.PageDescription</span>
        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn green btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                İşlemler
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="/Kullanici/Save">
                        <i class="fa fa-save"></i> Yeni Kayıt
                    </a>
                </li>
                <li>
                    <a href="/Kullanici/Index">
                        <i class="fa fa-search"></i> Arama
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="" class="fullscreen" data-original-title="Tam Ekran" title="Tam Ekran">
                        <i class="fa fa-arrows-alt"></i> Tam Ekran
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="portlet-body">
        <div class="portlet light bordered">
            <div class="portlet-body form">
                <div class="tabbable-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1" data-toggle="tab">Kullanıcı Bilgileri</a>
                        </li>
                        @{
                            if (kullanici.KullaniciId != null && kullanici.KullaniciId != Guid.Empty)
                            {
                                <li>
                                    <a href="#tab_2" data-toggle="tab">Kullanıcı Detayı</a>
                                </li>
                                <li>
                                    <a href="#tab_7" data-toggle="tab">
                                        Adresler
                                        <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@kullaniciAdresListesi.Count</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab_3" data-toggle="tab">
                                    Siparişler
                                        <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@kullaniciSiparisListesi.Count</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab_4" data-toggle="tab">
                                    İade Talepleri
                                        <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@kullaniciIadeTalepListesi.Count</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab_6" data-toggle="tab">
                                        İstek Listesi
                                        <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@kullaniciIstekListesi.Count</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab_5" data-toggle="tab">
                                    Sepet Hareketleri
                                    </a>
                                </li>
                                <li>
                                    <a href="#tab_8" data-toggle="tab">
                                        Yetkilendirme
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="disabled">
                                    <a href="#tab_2">Kullanıcı Detayı</a>
                                </li>
                                <li class="disabled">
                                    <a href="#tab_7">
                                    Adresler
                                        <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                                    </a>
                                </li>
                                <li class="disabled">
                                    <a href="#tab_3">
                                    Siparişler
                                        <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                                    </a>
                                </li>
                                <li class="disabled">
                                    <a href="#tab_4">
                                    İade Talepleri
                                        <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                                    </a>
                                </li>
                                <li class="disabled">
                                    <a href="#tab_6">
                                        İstek Listesi
                                        <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                                    </a>
                                </li>
                                <li class="disabled">
                                    <a href="#tab_5">
                                    Sepet Hareketleri
                                    </a>
                                </li>
                                <li class="disabled">
                                    <a href="#tab_8">
                                        Yetkilendirme
                                    </a>
                                </li>
                            }
                        }
                        
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <form id="comform_1">
                                <input id="hdnKullaniciId" type="hidden" value="@kullanici.KullaniciId" />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciEposta" class="control-label">Eposta<span class="required"> * </span></label>
                                            <div class="input-icon right">
                                                <i class="fa"></i>
                                                <input id="txtKullaniciEposta" name="txtKullaniciEposta" class="form-control input-sm com-email maxlength-handler" maxlength="50" placeholder="Eposta Giriniz..." value="@kullanici.Eposta" tabindex="1">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciSifre" class="control-label">Şifre<span class="required"> * </span></label>
                                            <div class="input-group">
                                                <span class="input-group-addon" onmouseover="javascript: $(this).parent().find('input')[0].type = 'text';" onmouseout="javascript: $(this).parent().find('input')[0].type = 'password';">
                                                    <i class="fa fa-eye font-purple"></i>
                                                </span>
                                                <div class="input-icon right">
                                                    <i class="fa"></i>
                                                    <input id="txtKullaniciSifre" name="txtKullaniciSifre" class="form-control input-sm maxlength-handler" maxlength="50" type="password" placeholder="Şifre Giriniz..."
                                                           value="@kullanici.Sifre" tabindex="2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciHesapKilitliMi" class="control-label">Hesap Kilitli mi?</label>
                                            <div class="icheck-inline">
                                                <input id="txtKullaniciHesapKilitliMi" name="txtKullaniciHesapKilitliMi" type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif"
                                                       @((kullanici.KullaniciId != null && kullanici.KullaniciId != Guid.Empty) ? (kullanici.HesapKilitliMi ? "checked" : "") : "") tabindex="3">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciEpostaOnayliMi" class="control-label">Eposta Onaylı mı?</label>
                                            <div class="icheck-inline">
                                                <input id="txtKullaniciEpostaOnayliMi" name="txtKullaniciEpostaOnayliMi" type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif"
                                                       @((kullanici.KullaniciId != null && kullanici.KullaniciId != Guid.Empty) ? (kullanici.EpostaOnayliMi ? "checked" : "") : "checked") tabindex="4">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciAktifMi" class="control-label">Aktif mi?</label>
                                            <div class="icheck-inline">
                                                <input id="txtKullaniciAktifMi" name="txtKullaniciAktifMi" type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif"
                                                       @((kullanici.KullaniciId != null && kullanici.KullaniciId != Guid.Empty) ? (kullanici.AktifMi ? "checked" : "") : "checked") tabindex="5">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="col-md-offset-5 col-md-7">
                                        @if (kullanici.KullaniciId == Guid.Empty)
                                        {
                                            <button type="submit" class="btn blue" tabindex="6">
                                                Kaydet
                                                <i class="fa fa-save"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn yellow" tabindex="6">
                                                Güncelle
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        }
                                        <a href="/Kullanici/Index" class="btn red" tabindex="7">
                                            İptal
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane" id="tab_2">
                            <form id="comform_2">
                                <input id="hdnKullaniciResim" type="hidden" value="@(kullaniciDetay.KullaniciResim != null ? "1" : "")" />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciAd" class="control-label">Adı<span class="required"> * </span></label>
                                            <div class="input-icon right">
                                                <i class="fa"></i>
                                                <input id="txtKullaniciAd" name="txtKullaniciAd" class="form-control input-sm maxlength-handler" maxlength="200" placeholder="Kullanıcı Adı Giriniz..."
                                                       value="@kullaniciDetay.Ad" tabindex="1">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtKullaniciSoyad" class="control-label">Soyadı<span class="required"> * </span></label>
                                            <div class="input-icon right">
                                                <i class="fa"></i>
                                                <input id="txtKullaniciSoyad" name="txtKullaniciSoyad" class="form-control input-sm maxlength-handler" maxlength="200" placeholder="Kullanıcı Soyadı Giriniz..."
                                                       value="@kullaniciDetay.Soyad" tabindex="2">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Şirket</label>
                                            <select id="dropDownSirket" class="form-control" style="width:100%;" tabindex="3"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Roller</label>
                                            <select id="dropDownRol" class="form-control" style="width:100%;" tabindex="4"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Resim</label>
                                            <div class="clear:both;"></div>
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                    @if (kullaniciDetay.KullaniciResim == null)
                                                    {
                                                        <img id="emptyFile" src="/Content/Img/no-image.png" alt="" />
                                                    }
                                                    else
                                                    {
                                                        var imageBase64Data = Convert.ToBase64String(kullaniciDetay.KullaniciResim);
                                                        string imageDataURL = string.Format("data:image/png;base64,{0}", imageBase64Data);

                                                        <img id="emptyFile" src="@imageDataURL" alt="" />
                                                    }
                                                </div>
                                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                                <div>
                                                    <span class="btn default btn-file">
                                                        <span class="fileinput-new" style="width:98px;"> Resim Seç </span>
                                                        <span class="fileinput-exists" style="width:98px;"> Değiştir </span>
                                                        <input id="fileUpload" name="fileUpload" type="file" onchange="resimSecildi();">
                                                    </span>
                                                    <a href="javascript:;" style="width:98px;" class="btn red fileinput-exists" data-dismiss="fileinput"> Sil </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="col-md-offset-5 col-md-7">
                                        @if (kullaniciDetay.KullaniciDetayId == Guid.Empty)
                                        {
                                            <button type="submit" class="btn blue" tabindex="5">
                                                Kaydet
                                                <i class="fa fa-save"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn yellow" tabindex="5">
                                                Güncelle
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        }
                                        <a href="/Kullanici/Index" class="btn red" tabindex="6">
                                            İptal
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane" id="tab_7">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-sm purple-intense" style="width:100%;" onclick="adresModalShow('0', '0')">
                                            <i class="fa fa-plus-circle"></i> Yeni Adres Ekle
                                        </button>
                                    </div>
