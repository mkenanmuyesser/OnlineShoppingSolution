@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

<div id="anketSoruModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Anket Soruları</h4>
            </div>
            <div class="modal-body" style="border-bottom: 1px solid #e5e5e5;">
                <div id="divAnketSoruPartial">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<div class="portlet light bordered blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-puzzle font-white"></i>
            <span class="caption-subject bold font-white uppercase"> @ViewBag.PageProperties.PageHeader </span>
            <span class="caption-helper">@ViewBag.PageProperties.PageDescription</span>
        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn green btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                İşlemler
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="/Anket/Save">
                        <i class="fa fa-save"></i> Yeni Kayıt
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="" class="fullscreen" data-original-title="Tam Ekran" title="Tam Ekran">
                        <i class="fa fa-arrows-alt"></i> Tam Ekran
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="portlet-body">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter font-dark"></i>
                    <span class="caption-subject font-dark bold">Filtreleme Kriterleri</span>
                </div>
                <div class="tools">
                    <a href="" class="collapse" data-original-title="Genişlet / Daralt" title="Genişlet / Daralt"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="#" class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="txtAnketAdi" class="control-label">Adı</label>
                                <input id="txtAnketAdi" class="form-control input-sm maxlength-handler" maxlength="50" placeholder="Anket Adı Giriniz..." tabindex="1" />
                            </div>
                            <div class="col-md-6">
                                <label for="txtAnketAciklama" class="control-label">Açıklama</label>
                                <input id="txtAnketAciklama" class="form-control input-sm" placeholder="Açıklama Giriniz..." tabindex="2" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">Yayınlanma Tarihi</label>
                                <div class="col-md-12" style="padding-left:0px !important;padding-right:0px !important;">
                                    <div class="col-md-6" style="padding-left:0px !important;">
                                        <div id="dateTimeAnketBaslangic" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Başlangıç Tarihi" tabindex="3">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6" style="padding-right:0px !important;">
                                        <div id="dateTimeAnketBitis" class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control" placeholder="Bitiş Tarihi" tabindex="4">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-th"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Ziyaretçi Cevaplayabilir mi?</label>
                                <div class="input-group">
                                    <div class="icheck-inline">
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdZiyaretci" class="icheck" value="2"> Tümü
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdZiyaretci" checked class="icheck" value="1"> Evet
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdZiyaretci" class="icheck" value="0"> Hayır
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">Yayında mı?</label>
                                <div class="input-group">
                                    <div class="icheck-inline">
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdYayin" class="icheck" value="2"> Tümü
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdYayin" checked class="icheck" value="1"> Evet
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdYayin" class="icheck" value="0"> Hayır
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Aktif mi?</label>
                                <div class="input-group">
                                    <div class="icheck-inline">
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" class="icheck" value="2"> Tümü
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" checked class="icheck" value="1"> Aktif
                                        </label>
                                        <label>
                                            <input type="radio" data-radio="iradio_square-aero" name="rdAktif" class="icheck" value="0"> Pasif
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="col-md-offset-5 col-md-7">
                                <button type="button" class="btn blue-madison" onclick="javascript: ara()" tabindex="5">
                                    Ara
                                    <i class="fa fa-search"></i>
                                </button>
                                <button type="button" class="btn green-meadow" onclick="javascript: temizle()" tabindex="6">
                                    Temizle
                                    <i class="fa fa-recycle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="fa fa-list-ul font-dark"></i>
                    <span class="caption-subject bold">Sonuç Listesi</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="box">
                    <div class="box-header">
                        <div id="boxTools" class="box-tools" style="display:none;">
                            <div class="input-group pull-left">
                                <input type="hidden" id="dropDownPagingSize" class="form-control select2" style="width: 100px;" value="5" />
                            </div>
                            <div class="input-group pull-right">
                                <button type="button" class="btn btn-xs green-stripe pull-right" style="margin-right:10px;" onclick="javascript: excelRaporuAl();"><i class="fa fa-file-excel-o"></i>Excel</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="tableAnket" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th style="width:10%">Adı</th>
                                        <th style="width:20%">Açıklama</th>
                                        <th style="width:5%;">Sorular</th>
                                        <th style="width:20%">Başlangıç-Bitiş</th>
                                        <th style="width:15%">Ziyaretçi Cevaplayabilir mi?</th>
                                        <th style="width:10%">Yayında mı?</th>
                                        <th style="width:10%">Aktif mi?</th>
                                        <th style="width:10%">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div id="footerInfo" class="row" style="display:none;">
                            <div class="col-md-12">
                                <div class="input-group pull-left">
                                    <p id="tableInfo" style="color: #6f6f6f;font-size: 12px;"></p>
                                </div>
                                <div class="input-group pull-right">
                                    <ul id="ulPaging" class="no-margin pull-right"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js{
    <script id="row" type="text/x-jquery-tmpl">
        <tr>
            <td>${Adi}</td>
            <td>${Aciklama}</td>
            <td style="text-align:center;">
                <button type="button" class="btn blue btn-xs" data-toggle="tooltip" data-placement="top" title="Soruları Göster" onclick="javascript: anketModalAc('${AnketId}');">
                    <i class="fa fa-question-circle"></i>
                </button>
            </td>
            <td>
                {{if BaslangicTarihi != null}}
                <span>${BaslangicTarihi}</span>
                {{else}}
                <span>?</span>
                {{/if}}
                <span> - </span>
                {{if BitisTarihi != null}}
                <span>${BitisTarihi}</span>
                {{else}}
                <span>?</span>
                {{/if}}
            </td>
            <td>
                <div class="icheck-inline">
                    {{if ZiyaretciCevapAktifMi}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" checked readonly>
                    {{else}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" readonly>
                    {{/if}}
                </div>
            </td>
            <td>
                <div class="icheck-inline">
                    {{if YayindaMi}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" checked readonly>
                    {{else}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Evet" data-off-text="Hayır" readonly>
                    {{/if}}
                </div>
            </td>
            <td>
                <div class="icheck-inline">
                    {{if AktifMi}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" checked readonly>
                    {{else}}
                    <input type="checkbox" class="make-switch" data-size="mini" data-on-text="Aktif" data-off-text="Pasif" readonly>
                    {{/if}}
                </div>
            </td>
            <td>
                <div class="text-center">
                    <a href="javascript: sil('${AnketId}');" class="btn btn-xs red" data-toggle="tooltip" data-placement="top" title="Sil">
                        <i class="fa fa-remove"></i>
                    </a>
                    <a href="/Anket/Save/${AnketId}" class="btn btn-xs yellow-casablanca" data-toggle="tooltip" data-placement="top" title="Güncelle">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>
            </td>
        </tr>
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#dateTimeAnketBaslangic').datepicker({
                autoclose: true,
                dateFormat: "dd.mm.yyyy",
                language: 'tr'
            });
            $('#dateTimeAnketBitis').datepicker({
                autoclose: true,
                dateFormat: "dd.mm.yyyy",
                language: 'tr'
            });

            $('#dropDownPagingSize').select2({
                language: {
                    noResults: function (params) {
                        return "Hiç kayıt bulunamadı.";
                    }
                },
                data: [
                    { id: 5, text: 5 },
                    { id: 10, text: 10 },
                    { id: 20, text: 20 },
                    { id: 50, text: 50 }
                ]
            }).on('select2:select', function (e) {
                ara(1, $('#dropDownPagingSize').val());
            });
        });

        function paging(totalCount, pageCount, pageIndex) {
            $('#ulPaging').pagination('destroy');
            $('#ulPaging').pagination({
                items: totalCount,
                itemsOnPage: pageCount,
                currentPage: pageIndex,
                cssStyle: 'light-theme',
                prevText: 'Önceki Sayfa',
                nextText: 'Sonraki Sayfa',
                onPageClick: function (pageNum) {
                    ara(pageNum, pageCount);
                }
            });
        }

        function ara(pageIndex, pageCount) {
            if ($('#dateTimeAnketBaslangic').datepicker('getDate') != '' && $('#dateTimeAnketBitis').datepicker('getDate')) {
                if ($('#dateTimeAnketBaslangic').datepicker('getDate') > $('#dateTimeAnketBitis').datepicker('getDate')) {
                    callAlert('warning', 'Başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            pageIndex = pageIndex == null ? 1 : pageIndex;
            pageCount = pageCount == null ? parseInt($('#dropDownPagingSize').val()) : pageCount;

            $.ajax({
                url: '/Anket/Ara',
                data: {
                    'adi': $('#txtAnketAdi').val(),
                    'aciklama': $('#txtAnketAciklama').val(),
                    'baslangicTarihi': $('#dateTimeAnketBaslangic').find('input').val() != '' ? $('#dateTimeAnketBaslangic').datepicker('getDate').toUTCString() : null,
                    'bitisTarihi': $('#dateTimeAnketBitis').find('input').val() != '' ? $('#dateTimeAnketBitis').datepicker('getDate').toUTCString() : null,
                    'ziyaretciCevap': parseInt($('input[name=rdZiyaretci]:checked').val()),
                    'yayin': parseInt($('input[name=rdYayin]:checked').val()),
                    'aktiflik': parseInt($('input[name=rdAktif]:checked').val()),
                    'sayfaSayisi': pageCount,
                    'sayfaSirasi': pageIndex
                },
                type: "get",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();

                    $('#tableAnket tbody').children().remove();
                    $('#row').tmpl(result.sonucListesi).appendTo('#tableAnket tbody');

                    $('#tableAnket .make-switch').bootstrapSwitch();
                    $('[data-toggle="tooltip"]').tooltip();

                    // table info
                    var txt = '';
                    if (result.toplamKayitSayisi > 0) {
                        var firstPart = ((result.sayfaSirasi - 1) * (result.sayfaSayisi) + 1);
                        var secondPart = (result.sayfaSirasi * result.sayfaSayisi) > result.toplamKayitSayisi ? result.toplamKayitSayisi : (result.sayfaSirasi * result.sayfaSayisi);
                        txt = 'Toplam ' + result.toplamKayitSayisi + ' kayıttan ' + firstPart + '-' + secondPart + ' gösteriliyor.';

                        $('#boxTools').show();
                        $('#footerInfo').show();
                    }
                    else {
                        txt = 'Hiç kayıt bulunamadı.';

                        $('#boxTools').hide();
                        $('#footerInfo').hide();
                    }
                    $('#tableInfo').text(txt);

                    paging(result.toplamKayitSayisi, result.sayfaSayisi, result.sayfaSirasi);
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function temizle() {
            $('#txtAnketAdi').val('');
            $('#txtAnketAciklama').val('');
            $('#dateTimeAnketBaslangic').data('datepicker').setDate(null);
            $('#dateTimeAnketBitis').data('datepicker').setDate(null);
        }

        function sil(id) {
            confirm('ONAY', '<p>Silmek istediğinize emin misiniz?</p>', function () {
                $.ajax({
                    url: '/Anket/Sil/' + id,
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function () {
                        showLoadingModal();
                    },
                    success: function (result) {
                        hideLoadingModal();
                        if (result) {
                            callAlert('success', 'Silme işlemi başarılı.');
                            ara();
                        }
                        else {
                            callAlert('error', 'İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                        }
                    },
                    error: function () {
                        hideLoadingModal();
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                });
            });
        }

        function excelRaporuAl() {
            if ($('#dateTimeAnketBaslangic').datepicker('getDate') != '' && $('#dateTimeAnketBitis').datepicker('getDate')) {
                if ($('#dateTimeAnketBaslangic').datepicker('getDate') > $('#dateTimeAnketBitis').datepicker('getDate')) {
                    callAlert('warning', 'Başlangıç tarihi bitiş tarihinden büyük olamaz.');
                    return false;
                }
            }

            var adi = $('#txtAnketAdi').val();
            var aciklama = $('#txtAnketAciklama').val();
            var baslangicTarihi = $('#dateTimeAnketBaslangic').find('input').val() != '' ? $('#dateTimeAnketBaslangic').datepicker('getDate').toUTCString() : null;
            var bitisTarihi = $('#dateTimeAnketBitis').find('input').val() != '' ? $('#dateTimeAnketBitis').datepicker('getDate').toUTCString() : null;
            var ziyaretciCevap = parseInt($('input[name=rdZiyaretci]:checked').val());
            var yayin = parseInt($('input[name=rdYayin]:checked').val());
            var aktiflik = parseInt($('input[name=rdAktif]:checked').val());

            window.location.href = '/Anket/ExcelRaporuAl?adi=' + adi
                + '&aciklama=' + aciklama
                + '&baslangicTarihi=' + baslangicTarihi
                + '&bitisTarihi=' + bitisTarihi
                + '&ziyaretciCevap=' + ziyaretciCevap
                + '&yayin=' + yayin
                + '&aktiflik=' + aktiflik;
        }

        function anketModalAc(id) {
            $('#divAnketSoruPartial').html('');

            $('#divAnketSoruPartial').load('/Anket/AnketSoruPartial/' + id);
            $('#anketSoruModal').modal('show');
        }
    </script>
}