@using CommerceProject.Business.Entities

@{
    var gonderimler = ViewBag.Gonderimler as List<Gonderim>;
}

@{
    int counter = 0;
}

<input id="hdnGonderimTip" type="hidden" value="0" />
<div class="col-sm-6 col-md-6">
    <div class="list-group">
        @foreach (var gonderim in gonderimler)
        {
            if (counter % 2 == 0)
            {
                <a href="javascript:;" class="list-group-item gonderimTip">
                    <p class="list-group-item-text">
                        <input type="hidden" class="inpGonderimTip" value="@gonderim.GonderimId" />
                        <div class="icon-bg">
                            <img src="@gonderim.Resim" style="height:50px;">
                        </div>
                        <br />
                        <span>@gonderim.Adi</span>
                    </p>
                </a>
            }

            {
                counter++;
            }
        }
    </div>
</div>
<div class="col-sm-6 col-md-6">
    <div class="list-group">
        @{
            counter = 0;
        }

        @foreach (var gonderim in gonderimler)
        {
            if (counter % 2 == 1)
            {
                <a href="javascript:;" class="list-group-item gonderimTip">
                    <p class="list-group-item-text">
                        <input type="hidden"  class="inpGonderimTip" value="@gonderim.GonderimId" />
                        <div class="icon-bg">
                            <img src="@gonderim.Resim" style="height:50px;">
                        </div>
                        <br />
                        <span>@gonderim.Adi</span>
                    </p>
                </a>
            }

            {
                counter++;
            }
        }
    </div>
</div>

<script type="text/javascript">
    $('.list-group-item').on('click', function (event) {
        event.preventDefault();

        if ($(this).hasClass('gonderimTip')) {

            var id = $(this).find('.inpGonderimTip').val();
            $('#hdnGonderimTip').val(id);

            if ($(this).hasClass('gonderimTip')) {
                $('.gonderimTip').removeClass('list-group-item-info');
                $(this).addClass('list-group-item-info');

                $(".edit").each(function (i, obj) {
                    if (obj.getAttribute('href').toString() == "#step-4") {
                        obj.click();
                    }
                });
            }
        }
    })
</script>