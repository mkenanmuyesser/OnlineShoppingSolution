        function seciliFaturaYazdir() {
            $('#btnPrevious').removeAttr('data-id');
            $('#btnPrevious').hide();
            siparisList = [];

            $('#btnNext').removeAttr('data-id');
            $('#btnNext').hide();

            showLoadingModal();

            $('#tableSiparis tbody input[type="checkbox"][class="icheck"]').each(function () {
                if ($(this).is(':checked')) {
                    siparisList.push($(this).val());
                }
            });

            if (siparisList.length == 0) {
                hideLoadingModal();
                callAlert('warning', 'Lütfen listeden sipariş seçiniz.');
                return false;
            }

            // Modal header bilgi ayarla
            $('#btnPrint span').text('(' + siparisList.length + ' Sipariş)');

            if (siparisList.length == 1) {
                $('#btnNext').hide();
                $('#btnPrevious').hide();
            }

            if (siparisList.length > 1) {
                $('#btnNext').attr('data-id', siparisList[1]);
                $('#btnNext').show();

                $('#btnPrevious').hide();
            }

            $('#divDetay').html('');

            $('#divDetay').load('/Siparis/SiparisProformaFaturaPartial/' + siparisList[0], function () {
                $('#detayModal').modal('show');
                hideLoadingModal();
            });
        }

        function detayYukle(obj) {
            var id = $(obj).attr('data-id');

            if (siparisList.length == 1) {
                return false;
            }

            showLoadingModal();
            $('#divDetay').html('');

            // Modal header bilgi ayarla
            var index = 0;
            for (var i = 0; i < siparisList.length; i++) {
                if (siparisList[i] == id) {
                    index = i;
                    break;
                }
            }

            var lastIndex = siparisList.length - 1;

            if (lastIndex == 1) {
                if (index == 0) {
                    $('#btnNext').attr('data-id', siparisList[1]);
                    $('#btnNext').show();

                    $('#btnPrevious').removeAttr('data-id');
                    $('#btnPrevious').hide();
                }
                else {
                    $('#btnPrevious').attr('data-id', siparisList[0]);
                    $('#btnPrevious').show();

                    $('#btnNext').removeAttr('data-id');
                    $('#btnNext').hide();
                }
            }

            if (lastIndex > 1) {
                if (index == 0) {
                    $('#btnNext').attr('data-id', siparisList[1]);
                    $('#btnNext').show();

                    $('#btnPrevious').removeAttr('data-id');
                    $('#btnPrevious').hide();
                }

                else if (index == lastIndex) {
                    $('#btnPrevious').attr('data-id', siparisList[lastIndex - 1]);
                    $('#btnPrevious').show();

                    $('#btnNext').removeAttr('data-id');
                    $('#btnNext').hide();
                }

                else if (index < lastIndex) {
                    $('#btnNext').attr('data-id', siparisList[index + 1]);
                    $('#btnNext').show();

                    $('#btnPrevious').attr('data-id', siparisList[index - 1]);
                    $('#btnPrevious').show();
                }
            }

            $('#divDetay').load('/Siparis/SiparisProformaFaturaPartial/' + id, function () {
                hideLoadingModal();
            });
        }

