@using CommerceProject.Business.Entities

@{ 
    var iskontoUrunler = ViewBag.IskontoUrunler as List<IskontoUrun>;
    var iskontoKategoriler = ViewBag.IskontoKategoriler as List<IskontoKategori>;
    var iskontoMarkalar = ViewBag.IskontoMarkalar as List<IskontoMarka>;
    var iskontoRoller = ViewBag.IskontoRoller as List<IskontoRol>;
    var iskontoSirketler = ViewBag.IskontoSirketler as List<IskontoSirket>;
}

<div class="tabbable-custom">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#tab_1" data-toggle="tab">
                Ürünler
                @if (iskontoUrunler.Count > 0)
                {
                    <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@iskontoUrunler.Count</span>
                }
                else
                {
                    <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                }
            </a>
        </li>
        <li>
            <a href="#tab_2" data-toggle="tab">
                Kategoriler
                @if (iskontoKategoriler.Count > 0)
                {
                    <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@iskontoKategoriler.Count</span>
                }
                else
                {
                    <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
                }
            </a>
        </li>
        <li>
            <a href="#tab_3" data-toggle="tab">
            Markalar
            @if (iskontoMarkalar.Count > 0)
            {
                <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@iskontoMarkalar.Count</span>
            }
            else
            {
                <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
            }
            </a>
        </li>
        <li>
            <a href="#tab_4" data-toggle="tab">
            Roller
            @if (iskontoRoller.Count > 0)
            {
                <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@iskontoRoller.Count</span>
            }
            else
            {
                <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
            }
            </a>
        </li>
        <li>
            <a href="#tab_5" data-toggle="tab">
            Şirketler
            @if (iskontoSirketler.Count > 0)
            {
                <span class="badge badge-danger" style="margin-top: -20px;margin-right: -12px;">@iskontoSirketler.Count</span>
            }
            else
            {
                <span class="badge badge-default" style="margin-top: -20px;margin-right: -12px;">0</span>
            }
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover iskonto-detay">
                                <thead>
                                    <tr>
                                        <th width="80%">Ürün Adı</th>
                                        <th width="20%">Aktif mi?</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var iu in iskontoUrunler)
                                        {
                                            <tr>
                                                <td>@(iu.Urun != null ? iu.Urun.Adi : "")</td>
                                                <td>
                                                    <div class="icheck-inline">
                                                        <input type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" @(iu.AktifMi ? "checked" : "") readonly>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_2">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover iskonto-detay">
                                <thead>
                                    <tr>
                                        <th width="80%">Kategori Adı</th>
                                        <th width="20%">Aktif mi?</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var ik in iskontoKategoriler)
                                        {
                                            <tr>
                                                <td>@(ik.Kategori != null ? ik.Kategori.Adi : "")</td>
                                                <td>
                                                    <div class="icheck-inline">
                                                        <input type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" @(ik.AktifMi ? "checked" : "") readonly>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_3">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover iskonto-detay">
                                <thead>
                                    <tr>
                                        <th width="80%">Marka Adı</th>
                                        <th width="20%">Aktif mi?</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var im in iskontoMarkalar)
                                        {
                                            <tr>
                                                <td>@(im.Marka != null ? im.Marka.Adi : "")</td>
                                                <td>
                                                    <div class="icheck-inline">
                                                        <input type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" @(im.AktifMi ? "checked" : "") readonly>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover iskonto-detay">
                                <thead>
                                    <tr>
                                        <th width="80%">Rol Adı</th>
                                        <th width="20%">Aktif mi?</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var ir in iskontoRoller)
                                        {
                                            <tr>
                                                <td>@(ir.Rol != null ? ir.Rol.Adi : "")</td>
                                                <td>
                                                    <div class="icheck-inline">
                                                        <input type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" @(ir.AktifMi ? "checked" : "") readonly>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_5">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover iskonto-detay">
                                <thead>
                                    <tr>
                                        <th width="80%">Şirket Adı</th>
                                        <th width="20%">Aktif mi?</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var isr in iskontoSirketler)
                                        {
                                            <tr>
                                                <td>@(isr.Sirket != null ? isr.Sirket.Adi : "")</td>
                                                <td>
                                                    <div class="icheck-inline">
                                                        <input type="checkbox" class="make-switch" data-size="small" data-on-text="Aktif" data-off-text="Pasif" @(isr.AktifMi ? "checked" : "") readonly>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.table.iskonto-detay .make-switch').bootstrapSwitch();
    });
</script>