    Layout = "~/Views/Shared/_MainRoot.cshtml";
}

<div class="modal fade" id="detayModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:900px;">
        <div class="modal-content" style="width:900px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    Proforma Fatura
                    <button id="btnPrint" class="btn green-meadow-stripe btn-xs pull-right margin-right-10" onclick="yazdir();"><i class="fa fa-print"></i> YAZDIR <span></span></button>
                    <button id="btnNext" style="display:none;" class="btn blue btn-xs pull-right margin-right-10 siparis-detay">Sonraki >></button>
                    <button id="btnPrevious" style="display:none;" class="btn blue btn-xs pull-right margin-right-10 siparis-detay"><< Önceki</button>
                </h4>
            </div>
