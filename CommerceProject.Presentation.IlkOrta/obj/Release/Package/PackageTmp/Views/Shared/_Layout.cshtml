                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function hemenAl(id, adet) {
            $.ajax({
                url: '/Sepet/HemenAl',
                data: JSON.stringify({
                    'urunId': id,
                    'adet': adet,
                }),
                type: "post",
                cache: false,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result == null || result == '') {
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                    else {
                        window.location = result;
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function sepetePaketEkle(id, adet) {
            if (adet == '' || adet == '0') {
                callAlert('warning', 'Adet bilgisi 0\'dan büyük olmalıdır.');
                return false;
            }

            $.ajax({
                url: '/Sepet/SepetePaketEkle',
                data: JSON.stringify({
                    'paketId': id,
                    'adet': adet,
                }),
                type: "post",
                cache: false,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    showLoadingModal();
                },
                success: function (result) {
                    hideLoadingModal();
                    if (result == null || result == '') {
                        callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                    }
                    else {
                        menuSepetYenile();
                        callAlert('success', 'Sepetinize paketten seçmiş olduğunuz ürünler eklendi.');
                    }
                },
                error: function () {
                    hideLoadingModal();
                    callAlert('error', 'Beklenmedik bir sorun oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function hemenPaketAl(id, adet) {
            $.ajax({
                url: '/Sepet/HemenPaketAl',
